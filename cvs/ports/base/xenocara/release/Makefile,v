	cd ${XSRCDIR} && ${MAKE} fix-appd DESTDIR=
	/usr/libexec/makewhatis ${X11BASE}/man

do-install:
	cd ${XSRCDIR} && ${MAKE} dist RELEASEDIR=${LOCATION} DESTDIR=/

post-install:

.include <bsd.port.mk>
