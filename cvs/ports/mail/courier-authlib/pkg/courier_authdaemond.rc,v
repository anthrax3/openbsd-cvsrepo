1.6
log
@Fix pexp.
@
text
@#!/bin/sh
#
# $OpenBSD: courier_authdaemond.rc,v 1.5 2011/03/20 13:06:23 ajacoutot Exp $

daemon="${TRUEPREFIX}/sbin/authdaemond"

. /etc/rc.d/rc.subr

pexp="${TRUEPREFIX}/sbin/courierlogger .* -start ${TRUEPREFIX}/libexec/courier-authlib/authdaemond"

rc_start() {
	mkdir -p /var/run/courier{,-auth}/
	${rcexec} "${daemon} start"
}

rc_stop() {
	${daemon} stop
}

rc_cmd $1
@


