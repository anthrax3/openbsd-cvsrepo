1.20
log
@update to pear-Mail-Mime 1.10.1, enable tests
@
text
@# $OpenBSD: Makefile,v 1.19 2015/10/29 21:43:19 sthen Exp $

COMMENT=	classes to create and decode MIME messages in PHP

DISTNAME=	Mail_Mime-1.10.1
CATEGORIES=	mail

MAINTAINER=	Stuart Henderson <sthen@@openbsd.org>

MODULES=	www/pear

PKG_ARCH=	*

# BSD
PERMIT_PACKAGE_CDROM=	Yes

MODULES+=	 lang/php # MODPHP_BIN, for tests
MODPHP_BUILDDEP= No
MODPHP_RUNDEP=	 No
TEST_DEPENDS=	 ${BASE_PKGPATH}
do-test:
	cd ${WRKSRC}/tests; pear -d php_bin=${MODPHP_BIN} run-tests

.include <bsd.port.mk>
@


