1.5
log
@Fix pexp.
@
text
@#!/bin/sh
#
# $OpenBSD: postfwd2.rc,v 1.4 2013/07/18 08:48:01 giovanni Exp $

daemon="${TRUEPREFIX}/sbin/postfwd2"
daemon_flags="-u _postfwd -g _postfwd -f ${SYSCONFDIR}/postfix/postfwd2.cf"

. /etc/rc.d/rc.subr

pexp="perl: ${daemon}${daemon_flags:+ ${daemon_flags}}"

rc_stop() {
	${daemon} --stop
}

rc_reload() {
	${daemon} --hup
}

rc_cmd $1
@


