1.5
log
@- bump major shlib version
- fix CUPS printing: fix partial so version and don't dlclose lib.
- remove partial so version on freetype
- move INSTALL/DEINSTALL code to PLIST
@
text
@#!/bin/sh
# $OpenBSD: DEINSTALL,v 1.4 2005/03/26 19:04:59 wilfried Exp $
#
# De-installation setup of mozilla-thunderbird

# exit on errors, use a sane path and install prefix
#
set -e
PATH=/bin:/usr/bin:/sbin:/usr/sbin
PREFIX=${PKG_PREFIX:-/usr/local}
MOZ=${PREFIX}/mozilla-thunderbird

# Verify proper execution
#
if [ $# -ne 2 ]; then
    echo "usage: $0 distname DEINSTALL" >&2
    exit 1
fi

# Verify/process the command
#
case $2 in
    DEINSTALL)
	cd ${MOZ}/components
	rm -f compreg.dat xpti.dat
	cd ${MOZ}/chrome
	rm -rf chrome.rdf overlayinfo
	;;
    *)
	echo "usage: $0 distname DEINSTALL" >&2
	exit 1
	;;
esac

exit 0
@


