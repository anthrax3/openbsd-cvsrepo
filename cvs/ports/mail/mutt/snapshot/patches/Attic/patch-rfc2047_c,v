   {
     if (ptr->personal)
       _rfc2047_encode_string (&ptr->personal, 1, col);
+    else if (ptr->group && ptr->mailbox)
+      _rfc2047_encode_string (&ptr->mailbox, 1, col);
 #ifdef EXACT_ADDRESS
     if (ptr->val)
       _rfc2047_encode_string (&ptr->val, 1, col);
@@@@ -910,6 +912,8 @@@@ void rfc2047_decode_adrlist (ADDRESS *a)
