	ifelse(defn(`_ARG_'), `',

	ifdef(`KOPANO_MAILER_PATH',
		KOPANO_MAILER_PATH,
		`${TRUEPREFIX}/sbin/kopano-dagent'),
	_ARG_))
define(`LOCAL_MAILER_ARGS',
	ifelse(len(X`'_ARG2_), `1', `kopano-dagent $u', _ARG2_))
undefine(`_LOCAL_PROCMAIL_')
undefine(`_LOCAL_LMTP_')
