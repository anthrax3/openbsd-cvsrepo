1.31
log
@move mailcap(4) to mailcap(5), prompted by a partially-related
mail from Edgar Pettijohn
@
text
@# $OpenBSD: Makefile,v 1.30 2015/05/18 11:29:38 jasper Exp $

COMMENT=	MIME implementation

DISTNAME=	mm2.7
PKGNAME=	metamail-2.7
REVISION=	5
CATEGORIES=	mail

MASTER_SITES=	http://www.guppylake.com/~nsb/metamail/
EXTRACT_SUFX=	.tar.Z

PERMIT_PACKAGE_CDROM=	Yes

WANTLIB=	c termcap
# mkfontdir & friends
USE_X11 =	Yes

WRKSRC=		${WRKDIST}/src
MAKE_FLAGS=	CC="${CC}" CFLAGS="-DHAVE_TCGETATTR ${CFLAGS}"
NO_TEST=	Yes

post-configure:
	@@${SUBST_CMD} ${WRKSRC}/config.h

pre-install:
	rm ${WRKSRC}/bin/*.orig

post-install:
	mv ${PREFIX}/man/man4/mailcap.4 ${PREFIX}/man/man5/mailcap.5

.include <bsd.port.mk>
@


