do_warning()
{
    echo "+---------------"
    echo "| WARNING!"
    echo "|"
    echo "| This port has changed its user/group from 'majordom' to"
    echo "| '_majordomo'. If you installed this port before, ensure"
    echo "| all permissions are set correctly and then \"rmuser majordom\"."
    echo "+---------------"
}

a90 1
	do_warning
