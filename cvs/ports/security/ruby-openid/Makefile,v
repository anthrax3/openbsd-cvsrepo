PKGNAME=	openid-2.2.2
REVISION =	0
CATEGORIES=	security

# Apache License
PERMIT_PACKAGE_CDROM=	Yes

MODULES=	lang/ruby

CONFIGURE_STYLE=ruby gem

# They are included in the tarball, but how to run them?
NO_TEST=	Yes
.include <bsd.port.mk>
@


