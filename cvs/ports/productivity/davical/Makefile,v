post-patch:
	# fix sql files to remove quotes from LANGUAGE statements, breaks with pgsql 9.3.
	cd ${WRKSRC} && grep -rl LANGUAGE dba | xargs perl -pi -e "s/LANGUAGE '(\w+)'/LANGUAGE \1/"
@


1.11
