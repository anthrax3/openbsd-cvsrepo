d33 1
a33 5
# We don't use SUBST_CMD here because it goofs with some images inlined
# in the code.
pre-configure:
	mv ${WRKSRC}/impressive.py ${WRKSRC}/impressive.py.orig
	sed -e "1s|/.*|${MODPY_BIN}|" ${WRKSRC}/impressive.py.orig > ${WRKSRC}/impressive.py
@


