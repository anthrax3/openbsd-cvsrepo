1.34
log
@Remove. Upstream will not make releases anymore and advise to use git
master instead. It's pretty easy to do a checkout and run it instead of
using a package.

ok jasper@@
@
text
@# $OpenBSD: Makefile,v 1.33 2015/06/05 06:00:23 robert Exp $

COMMENT=		webbased rss reader with standalone look and feel

GH_ACCOUNT=		gothfox
GH_PROJECT=		Tiny-Tiny-RSS
GH_TAGNAME=		1.15.3
DISTNAME=		${GH_PROJECT}-${GH_TAGNAME}
PKGNAME=		tt-rss-${GH_TAGNAME}
CATEGORIES=		www
REVISION=		0

HOMEPAGE=		http://tt-rss.org/

# GPLv2
PERMIT_PACKAGE_CDROM=	Yes

NO_BUILD=		Yes
NO_TEST=		Yes
PKG_ARCH=		*

PREFIX=		${VARBASE}/www
INSTDIR=		${PREFIX}/tt-rss
SUBST_VARS=		INSTDIR MODPHP_BIN

MODULES=		lang/php
RUN_DEPENDS=		lang/php/${MODPHP_VERSION},-pgsql \
			lang/php/${MODPHP_VERSION},-curl \
			lang/php/${MODPHP_VERSION},-xmlrpc

do-install:
	find ${WRKDIST}/lib/ -name '*.js.uncompressed.js' -exec rm {} +
	cp -Rp ${WRKDIST} ${INSTDIR}
	${SUBST_CMD} ${INSTDIR}/{update.php,config.php-dist}
	rm -Rf ${INSTDIR}/{*.{beforesubst,orig},.*,debian}
	chown -R ${SHAREOWN}:${SHAREGRP} ${INSTDIR}

.include <bsd.port.mk>
@


