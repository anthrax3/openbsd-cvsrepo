do_warning()
{
    echo "+---------------"
    echo "| WARNING!"
    echo "|"
    echo "| This port has changed its user/group from 'privoxy' to '_privoxy'."
    echo "| If you installed this port before, ensure all permissions are set"
    echo "| correctly and then \"rmuser privoxy\"."
    echo "+---------------"
}

