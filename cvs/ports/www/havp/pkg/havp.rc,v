text
@#!/bin/sh
#
# $OpenBSD: havp.rc,v 1.1 2010/12/30 10:21:25 giovanni Exp $

daemon="${TRUEPREFIX}/sbin/havp"

. /etc/rc.d/rc.subr

rc_pre() {
	install -d -o _havp -g _havp /var/run/havp/ /var/tmp/havp/
}

rc_cmd $1
@


