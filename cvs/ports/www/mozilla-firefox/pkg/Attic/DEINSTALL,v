1.6
log
@- bump major shlib version
- move INSTALL/DEINSTALL code to PLIST
- remove unused ldap config/patches
@
text
@#!/bin/sh
# $OpenBSD: DEINSTALL,v 1.5 2005/03/16 08:59:04 wilfried Exp $
#
# De-installation setup of mozilla-firefox

# exit on errors, use a sane path and install prefix
#
set -e
PATH=/bin:/usr/bin:/sbin:/usr/sbin
PREFIX=${PKG_PREFIX:-/usr/local}
MOZ=${PREFIX}/mozilla-firefox

# Verify proper execution
#
if [ $# -ne 2 ]; then
    echo "usage: $0 distname DEINSTALL" >&2
    exit 1
fi

# Verify/process the command
#
case $2 in
    DEINSTALL)
	cd ${MOZ}/components
	rm -f compreg.dat xpti.dat
	cd ${MOZ}/chrome
	rm -rf chrome.rdf overlayinfo
	;;
    *)
	echo "usage: $0 distname DEINSTALL" >&2
	exit 1
	;;
esac

exit 0
@


