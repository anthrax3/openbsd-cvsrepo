do-test:
	cd ${WRKSRC}/t && RUBYLIB=$$(dirname `${GEM} which rack`) RUBYOPT=-rubygems \
		RUBY=${RUBY} MRI=${RUBY} MAKE="gmake -ek" gmake -ek \
		ThreadSpawn.t0000-simple-http.sh

