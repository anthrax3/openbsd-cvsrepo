PHP_VERSION=		5

FLAVORS=		mysql pgsql
FLAVOR?=		mysql

.if ${FLAVOR:L:Mmysql}
RUN_DEPENDS+=		:php${PHP_VERSION}-mysql-*:www/php${PHP_VERSION}/extensions,-mysql
.elif ${FLAVOR:L:Mpgsql}
RUN_DEPENDS+=		:php${PHP_VERSION}-pgsql-*:www/php${PHP_VERSION}/extensions,-pgsql
.else
ERRORS+=		"Fatal: Invalid flavor: ${FLAVOR}"
.endif
@


