# Default Makefile to install a PHP PEAR module

default:

install:
	cp ${WRKDIR}/package.xml ${.CURDIR}
	mkdir -p ${PREFIX}/lib/php
	${LOCALBASE}/bin/pear install -R ${WRKINST} -n ${.CURDIR}/package.xml
@


