         chop  $groupSID;
-        $groupGID = `wbinfo -Y "$groupSID"`;
+        $groupGID = `${LOCALBASE}/bin/wbinfo -Y "$groupSID"`;
         chop $groupGID;
         &debug( "User:  -$user-\nGroup: -$group-\nSID:   -$groupSID-\nGID:   -$groupGID-");
