d52 2
a54 1
DESCR=		${PKGDIR}/DESCR
a55 11

SUBST_VARS=	LANG
SUBPACKAGE?=

.if defined(PACKAGING)
.  if !empty(SUBPACKAGE)
LANG=		${SUBPACKAGE:C/^-//}
.  else
LANG=		${MAINLANG}
.  endif
.endif
@


