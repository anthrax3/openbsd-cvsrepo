+    cflags='-I/usr/include/openssl';
+    liblink='-lssl -lcrypto';;
   x3) # xmatrixssl | xMatrixSSL)
     liblink='-lmatrixssl' ;;
   *) echo "$me: bad OPTION_TLS parameter" >&2; (exit 1); exit 1 ;;
