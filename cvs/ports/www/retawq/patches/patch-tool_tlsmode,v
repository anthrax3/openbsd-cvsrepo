@@@@ -38,8 +38,8 @@@@ case "x$option_tls" in
     cflags=`libgnutls-config --cflags`;
     liblink=`libgnutls-config --libs` ;;
   x2) # xopenssl | xOpenSSL)
-    cflags=`pkg-config --cflags openssl`;
