do_screencap()
{
    echo "|"
    echo "| The file $SAMPLE_CONFIG_DIR/screencap contains a"
    echo "| termcap like description of the screen virtual terminal."
    echo "| You may use it to update your terminal database."
    echo "| See termcap(5)."
d53 1
a53 1
	    do_notice $1
d55 1
a55 1
	    do_install $1
a56 1
	do_screencap $1
@


