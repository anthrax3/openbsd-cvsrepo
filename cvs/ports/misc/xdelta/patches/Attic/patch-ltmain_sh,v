 	;;
 
       -l*)
+        if test "$arg" = "-lc"; then
+          case "$host" in
+          *-*-openbsd*)
+            # Do not include libc due to us having libc/libc_r.
+            continue
+            ;;
+          esac
+        elif test "$arg" = "-lc_r"; then
+          case "$host" in
+          *-*-openbsd*)
+            # Do not include libc_r directly, use -pthread flag.
+            continue
+            ;;
+          esac
+        fi
+        deplibs="$deplibs $arg"
+        ;;
+ 
+      -?thread)
 	deplibs="$deplibs $arg"
 	;;
 
