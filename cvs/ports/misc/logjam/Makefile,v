MODULES =	devel/gettext \
		textproc/intltool


LIB_DEPENDS =	devel/libsoup \
		textproc/libxml \
		x11/dbus-glib \
		x11/gtk+2

RUN_DEPENDS =	devel/desktop-file-utils

USE_GMAKE =		Yes
CONFIGURE_STYLE =	gnu
CONFIGURE_ARGS =	--with-libsoup \
			--with-sqlite3 \
			--without-librsvg \
			--without-gtkspell \
			--without-gtkhtml314 \
			--without-banshee

CONFIGURE_ENV =		CPPFLAGS="-I${LOCALBASE}/include" \
			LDFLAGS="-L${LOCALBASE}/lib"

.include <bsd.port.mk>
