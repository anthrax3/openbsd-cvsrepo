text
@# $OpenBSD: Makefile,v 1.32 2013/03/11 11:23:58 espie Exp $

COMMENT=		wm-dockapp; alarm clock

DISTNAME=		wmtimer-2.92
REVISION=		5
CATEGORIES=		misc x11 x11/windowmaker

HOMEPAGE=		http://www.darkops.net/wmtimer/

# GPLv2
PERMIT_PACKAGE_CDROM=	Yes

WANTLIB += X11 Xcomposite Xcursor Xdamage Xext Xfixes
WANTLIB += Xi Xinerama Xpm Xrandr Xrender atk-1.0 c cairo
WANTLIB += fontconfig freetype gdk-x11-2.0 gdk_pixbuf-2.0 gio-2.0 glib-2.0
WANTLIB += gobject-2.0 gtk-x11-2.0 intl pango-1.0 pangocairo-1.0 pangoft2-1.0
WANTLIB += pthread z

MASTER_SITES=		${HOMEPAGE}

LIB_DEPENDS=		x11/gtk+2

NO_TEST=		Yes

WRKSRC=			${WRKDIST}/wmtimer

MAKE_ENV=		CC="${CC}"

do-install:
	${INSTALL_PROGRAM} ${WRKBUILD}/wmtimer ${PREFIX}/bin

.include <bsd.port.mk>
@


