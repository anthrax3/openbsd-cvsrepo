DISTNAME=	Unicode-Map-0.112
REVISION=	5
CATEGORIES=	converters
MODULES=	cpan

# Perl
PERMIT_PACKAGE_CDROM=	Yes

WANTLIB += c perl

.include <bsd.port.mk>
@


