@@@@ -148,6 +148,17 @@@@ static void WAV_Update(void)
 	ULONG done;
 
 	done=VC_WriteBytes(audiobuffer,BUFFERSIZE);
+#if BYTE_ORDER == BIG_ENDIAN
+	if (md_mode & DMODE_16BITS) {
+		ULONG i;
+		SWORD *w = audiobuffer;
+
+		for (i = 0; i < done; i += 2) {
+			*w = ((*w & 0xff) << 8) | ((*w & 0xff00) >> 8);
+			w++;
+		}
+	}
+#endif
 	_mm_write_UBYTES(audiobuffer,done,wavout);
 	dumpsize+=done;
