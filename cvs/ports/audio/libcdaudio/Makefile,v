# LGPLv2+
PERMIT_PACKAGE_CDROM=   Yes

MASTER_SITES=   ${MASTER_SITE_SOURCEFORGE:=libcdaudio/}

CONFIGURE_STYLE= gnu

.include <bsd.port.mk>
@


