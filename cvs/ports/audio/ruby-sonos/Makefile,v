@# $OpenBSD: Makefile,v 1.6 2014/08/20 19:26:55 jasper Exp $

COMMENT =		control Sonos speakers with Ruby

DISTNAME =		sonos-0.3.6
REVISION =		0

CATEGORIES =		audio net

