+#   define INT_DIVZERO(s, c)	((s) == SIGTRAP)
+#   define INT_OVFLW(s, c)	((s) == SIGTRAP)
+#    define SIG_GetPC(scp)              ((scp)->sc_frame.srr0)
+#    define SIG_SetPC(scp, addr)        { (scp)->sc_frame.srr0 = (long)(addr); }
