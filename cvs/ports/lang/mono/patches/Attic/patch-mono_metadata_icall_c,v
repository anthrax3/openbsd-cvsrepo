 	gchar *endptr = NULL;
 	*result = 0.0;
 
+#if defined(__OpenBSD__)
+	if (*ptr)
+		*result = strtod (ptr, &endptr);
+#else
 	if (*ptr){
 		/* mono_strtod () is not thread-safe */
 		mono_mutex_lock (&mono_strtod_mutex);
 		*result = mono_strtod (ptr, &endptr);
 		mono_mutex_unlock (&mono_strtod_mutex);
 	}
+#endif
 
 	if (!*ptr || (endptr && *endptr))
 		return FALSE;
