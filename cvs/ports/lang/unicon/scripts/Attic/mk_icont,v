@#!/usr/bin/perl

$PREFIX=shift;
# This small script does build a suitable shell wrapper that calls
# icont, according to env variables.

print <<"EOF";
#!/bin/sh
IPATH="\${IPATH-} $PREFIX/share/ipl/lib"
LPATH="\${LPATH-} $PREFIX/share/ipl/include"
export IPATH LPATH
exec $PREFIX/lib/icont "\$@@"
EOF
@


