# LGPL v2
PERMIT_PACKAGE_CDROM=	Yes

USE_GMAKE=	Yes

MODULES=	lang/mono

CONFIGURE_STYLE=simple
CONFIGURE_ARGS=	--prefix="${TRUEPREFIX}"

TEST_TARGET=	test

.include <bsd.port.mk>
