@update to glew-2.0.0, from Brad, bulk build tests by me and naddy
@
text
@NAME = $(GLEW_NAME)
CC ?= cc
LD ?= cc
LDFLAGS.EXTRA = -L$(X11BASE)/lib
LDFLAGS.GL = -lm -lXmu -lXi -lGLU -lGL -lXext -lX11
LDFLAGS.STATIC = -Wl,-Bstatic
LDFLAGS.DYNAMIC = -Wl,-Bdynamic
CFLAGS.EXTRA += -I$(X11BASE)/include
NAME = GLEW
WARN = -Wall -W
POPT =
CFLAGS.EXTRA += -fPIC
BIN.SUFFIX =
LIB.SHARED = lib$(NAME).so.$(LIBGLEW_VERSION)
LIB.STATIC = lib$(NAME).a
LDFLAGS.SO = -shared -fPIC
SHARED_OBJ_EXT = pic_o
@


