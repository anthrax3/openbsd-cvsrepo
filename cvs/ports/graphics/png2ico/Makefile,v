a26 1
USE_GMAKE=	Yes
d28 1
a28 8
WRKSRC=		${WRKDIR}/png2ico

post-patch:
	cd ${WRKSRC} && \
	    perl -pi -e \
	        's|-W -Wall -O2|${CXXFLAGS} -I${LOCALBASE}/include/libpng|' \
	        ${WRKSRC}/Makefile && \
	    perl -pi -e 's|-lpng|-L${LOCALBASE}/lib -lpng|' ${WRKSRC}/Makefile
@


