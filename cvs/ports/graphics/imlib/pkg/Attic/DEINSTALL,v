@
text
@d2 1
a2 1
# $OpenBSD: DEINSTALL,v 1.2 2001/03/02 19:55:32 brad Exp $
a5 1
set -e
d8 1
a8 1
CONFIG_DIR=${SYSCONFDIR}
d10 1
a10 1
if [ "$PKG_DELETE_EXTRA" != Yes ]; then
d16 1
a16 2
    echo "|           rm -f $CONFIG_DIR/imrc"
    echo "|           rm -f $CONFIG_DIR/im_palette.pal"
@


