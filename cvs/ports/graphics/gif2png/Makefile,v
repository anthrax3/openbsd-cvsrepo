post-extract:
	@@cd ${WRKSRC}; ${GZCAT} ${DISTDIR}/gif2png-0.6-0.7.patch.gz \
	| ${PATCH} --quiet -p1

do-install:
	${INSTALL_PROGRAM} ${WRKSRC}/gif2png ${PREFIX}/bin
@


