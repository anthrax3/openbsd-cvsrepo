text
@#!/bin/sh
#
# $OpenBSD: riemann.rc,v 1.1.1.1 2016/12/21 12:51:56 landry Exp $

daemon="${TRUEPREFIX}/bin/riemann"
daemon_user="_riemann"

. /etc/rc.d/rc.subr

java="$(${LOCALBASE}/bin/javaPathHelper -c clojure)"

pexp="${java}.*riemann.*"
rc_bg=YES

rc_start() {
	${rcexec} "JAVA_CMD=\"${java}\" ${daemon} ${_bg}"
}

rc_cmd $1
@


