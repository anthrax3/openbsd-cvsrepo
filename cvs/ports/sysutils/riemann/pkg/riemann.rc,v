@d3 1
a3 1
# $OpenBSD$
a6 3
daemon_log="${LOCALSTATEDIR}/log/riemann/riemann.log"

rc_bg=YES
d11 1
d13 1
d16 1
a16 1
    (${rcexec} "JAVA_CMD=\"${java}\" ${daemon} > ${daemon_log} 2>&1") &
@


