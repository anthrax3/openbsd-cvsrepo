1.3
log
@mcollectived needs --pid parameter in order to properly daemonize

feedback/OK jasper@@, ajacoutot@@
@
text
@#!/bin/sh
#
# $OpenBSD: mcollectived.rc,v 1.2 2013/03/13 22:54:26 ajacoutot Exp $

daemon="${TRUEPREFIX}/sbin/mcollectived"
daemon_flags="--pid=/var/run/mcollectived.pid"

. /etc/rc.d/rc.subr

pexp="${RUBY} ${daemon}${daemon_flags:+ ${daemon_flags}}"
rc_reload=NO

rc_cmd $1
@


