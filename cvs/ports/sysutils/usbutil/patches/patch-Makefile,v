1.3
log
@Do not patch away "nroff" in the Makefile, the "man" target is not used
in the build, anyway.  This simplifies the patch and prevents false
positives when auditing the ports tree for bogus mandoc usage.
No package change, no bump.
ok naddy@@
@
text
@$OpenBSD: patch-Makefile,v 1.2 2010/10/20 15:36:46 naddy Exp $
--- Makefile.orig	Wed May 19 23:05:31 1999
+++ Makefile	Sun Apr 27 01:57:55 2014
@@@@ -1,5 +1,4 @@@@
 PROGS = usbctl usbdebug usbstats usbgen 
-CFLAGS = -Wall -s
 
 all:	$(PROGS)
 
@@@@ -7,16 +6,16 @@@@ man:	usbgen.8
 	nroff -mandoc usbgen.8 > usbgen.0
 
 usbctl:		usbctl.c
-	cc $(CFLAGS) usbctl.c -o usbctl
+	${CC} $(CFLAGS) usbctl.c -o usbctl
 
 usbdebug:	usbdebug.c
-	cc $(CFLAGS) usbdebug.c -o usbdebug
+	${CC} $(CFLAGS) usbdebug.c -o usbdebug
 
 usbstats:	usbstats.c
-	cc $(CFLAGS) usbstats.c -o usbstats
+	${CC} $(CFLAGS) usbstats.c -o usbstats
 
 usbgen:		usbgen.c
-	cc $(CFLAGS) usbgen.c -o usbgen
+	${CC} $(CFLAGS) usbgen.c -o usbgen
 
 install: $(PROGS)
 	install usbctl usbdebug usbstats usbgen $(PREFIX)/sbin
@


