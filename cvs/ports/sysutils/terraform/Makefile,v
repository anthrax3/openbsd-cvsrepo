# Redefine ${MODGO_CMD} to include GO15VENDOREXPERIMENT
MODGO_CMD=		unset GOPATH; \
				export GO15VENDOREXPERIMENT=1; \
				export GOPATH="${MODGO_WORKSPACE}:${MODGO_PACKAGE_PATH}"; \
