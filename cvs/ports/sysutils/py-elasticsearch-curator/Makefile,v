MODULES=	lang/python
RUN_DEPENDS=	devel/py-certifi>=2017.1.23 \
		devel/py-click>=6.7 \
		devel/py-voluptuous \
		textproc/py-elasticsearch>=5.3,<6 \
		textproc/py-yaml

MODPY_SETUPTOOLS= Yes

# Requires unported nosexcover
NO_TEST=	Yes

.include <bsd.port.mk>
