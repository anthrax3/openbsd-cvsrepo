pre-patch:
	find ${WRKSRC} -name '*.[ch]'|xargs fgrep -l malloc.h| \
        while read i; do \
                sed -e 's/malloc.h/stdlib.h/' $$i >$$i.bak && mv $$i.bak $$i; \
        done
