REVISION=	0
CATEGORIES=	textproc
 
# perl
PERMIT_PACKAGE_CDROM=	Yes

TEST_DEPENDS=	${FULLPKGNAME}:${BUILD_PKGPATH}

.include <bsd.port.mk>
