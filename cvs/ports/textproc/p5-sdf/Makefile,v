DISTNAME=	sdf-2.001
REVISION=	1
CATEGORIES=	textproc

MASTER_SITES=	${MASTER_SITE_PERL_CPAN:=Pod/}

# BSD
PERMIT_PACKAGE_CDROM=	Yes

.include <bsd.port.mk>
@


