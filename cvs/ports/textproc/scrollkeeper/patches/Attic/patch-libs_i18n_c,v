@@@@ -38,6 +38,21 @@@@ enum {
  *    All rights reserved.
  */
 
+/* Well, of course the whole world uses glibc... */
+static char *
+strndup(const char *str, int len) {
+	char *ret;
+
+	if ((str == NULL || len < 0))
+		return(NULL);
+	ret = (char *)malloc(len + 1);
+	if (ret == NULL)
+		return(NULL);
+	memcpy(ret, str, len);
+	ret[len] = '\0';
+	return(ret);
+}
+
