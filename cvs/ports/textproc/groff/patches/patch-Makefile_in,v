   "top_srcdir=$(top_srcdir)" \
   "version=$(version)"
 
-MAKE_K_FLAG=`case "$(MAKEFLAGS)" in *k*) echo ' -k ';; esac`
+MAKE_K_FLAG=
 
 INCDIRS=\
   src/include
@@@@ -618,8 +618,8 @@@@ ALLDIRS=\
