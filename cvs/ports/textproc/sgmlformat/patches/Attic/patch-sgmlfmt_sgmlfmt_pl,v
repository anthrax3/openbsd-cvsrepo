 #
+# Check if a command we've run returned an error status.  If so, remove
+# scratch files and exit.
+#
+sub exitiferror {
+    local($ret) = @@_;
+    if ($ret >> 8 != 0) {
+	unlink @@cleanfiles;
+	exit($ret >> 8);
+    }
+}
