@Use the devel/gettext MODULE. Regen PLIST and WANTLIB.
@
text
@d1 1
a1 1
# $OpenBSD: Makefile,v 1.7 2007/09/15 20:59:38 merdely Exp $
a5 1
PKGNAME=	${DISTNAME}p1
d8 4
a11 2
SHARED_LIBS=	wpd		8.9 \
		wpd-stream	8.9
a34 7

pre-configure:
	@@cd ${WRKSRC} && \
		for PCFILE in *.pc.in; do \
			cp $$PCFILE \
			`echo $$PCFILE | sed 's/-0.8//g'`; \
		done
@


