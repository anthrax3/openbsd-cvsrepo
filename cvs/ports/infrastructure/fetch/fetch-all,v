d39 1
d45 8
a52 8
		case `cksum -a ${CIPHER} <$check` in
			${CKSUM}) 
				echo "Fetch, ok: $@@"
				exit 0;;
			*) 
				echo "Fetch, bad checksum: $@@ on ${site}"
				rm -f $1;;
		esac
@


