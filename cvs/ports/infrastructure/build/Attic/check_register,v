cd ${PORTSDIR} && make show ECHO_MSG=: VARNAME=FULLPKGPATH | tee ${known1}
d40 3
a42 2
	-path ./packages\* -prune -o -path ./logs\* -prune -o \
	-name work\* -prune -o -name Makefile -print | \
d48 1
a48 1
		cd ${PORTSDIR} && cd $d && make show VARNAME=FULLPKGPATH >>${known2}
@

