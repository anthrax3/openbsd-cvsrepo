-	opt=`echo $opt | sed 's/without/with/'`
-	valomitted="no" val="no" ;;
+      case "${valomitted}-${opt}" in
+	yes-without_* )
+	  opt=`echo $opt | sed 's/without/with/'`
+	  valomitted="no" val="no"
+	;;
+	yes-disable_*)
+	  opt=`echo $opt | sed 's/disable/enable/'`
+	  valomitted="no" val="no"
+	;;
       esac
 
       dnl Process the option.
