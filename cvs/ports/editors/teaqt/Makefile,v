1.22
log
@New HOMEPAGE and MASTER_SITES

sourceforge kept last in MASTER_SITES because it serves tarballs for
the old versions we use.
@
text
@# $OpenBSD: Makefile,v 1.21 2017/04/10 11:45:27 sthen Exp $

COMMENT =	powerful and simple qt4 editor

V =		33.3.0
REVISION =	0
DISTNAME =	tea-${V}
PKGNAME =	teaqt-${V}
CATEGORIES =	editors x11
MASTER_SITES =	http://semiletov.org/tea/dloads/ \
		${MASTER_SITE_SOURCEFORGE:=tea-editor/}
EXTRACT_SUFX =	.tar.bz2

HOMEPAGE =	http://semiletov.org/tea/

# GPLv3
PERMIT_PACKAGE_CDROM =	Yes

LIB_DEPENDS =	textproc/aspell/core
WANTLIB += c m pthread ${LIBCXX} z QtGui QtXml aspell
WANTLIB += ICE SM X11 Xext Xi Xinerama Xrender fontconfig freetype

MODULES =	devel/qmake x11/qt4
CONFIGURE_ENV =	USE_ASPELL=true USE_HUNSPELL=false

NO_TEST =	Yes

do-install:
	${INSTALL_PROGRAM} ${WRKBUILD}/bin/tea ${PREFIX}/bin/tea

.include <bsd.port.mk>
@


