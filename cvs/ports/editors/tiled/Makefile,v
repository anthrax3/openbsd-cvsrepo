d27 1
d29 2
a30 10
MAKE_FLAGS =		CC="${CC}" \
			CXX="${CXX}" \
			CXXFLAGS="${CXXFLAGS} -fPIC" \
			PREFIX="${PREFIX}" \
			LIBtiled_VERSION="${LIBtiled_VERSION}"
FAKE_FLAGS =		INSTALL_ROOT="${DESTDIR}"

do-configure:
	cd ${WRKSRC} && ${SETENV} ${MAKE_ENV} \
		qmake4 -makefile tiled.pro -config release
a34 3

