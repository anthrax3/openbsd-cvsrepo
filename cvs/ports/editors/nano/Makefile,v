# convenience target for maintainer to regen the syntax highlighting patches
nanorc-patches: extract
	cd ${WRKSRC}/doc/syntax; \
	    for i in *.nanorc; do \
		mv $$i $$i.orig; \
		sed -e 's/\\</[[:<:]]/g' -e 's/\\>/[[:>:]]/g' $$i.orig >$$i; \
		cmp $$i.orig $$i && mv $$i.orig $$i; \
	    done
@


