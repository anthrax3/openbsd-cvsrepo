			x11/gnome

LIB_DEPENDS=		textproc/libxml \
			x11/gtk+2

USE_GMAKE=		Yes
CONFIGURE_STYLE=	gnu

TEST_IS_INTERACTIVE=	x11

.include <bsd.port.mk>
