			-I${X11BASE}/include/freetype2 \
			-I${LOCALBASE}/include \
			$$(pkg-config --cflags libconfuse) \
			$$(pkg-config --cflags cairo) \
			-DVERSION=\\\"$V\\\" \
			-DRELEASE=\\\"Fruit_Fly\\\"

LDFLAGS+=		-L${X11BASE}/lib -L${LOCALBASE}/lib \
			-lX11 -lXext -lXrandr -lXinerama -lXft \
			$$(pkg-config --libs libconfuse) \
			$$(pkg-config --libs cairo)

