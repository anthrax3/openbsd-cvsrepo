+#!/bin/sh
 #
 # Shell script for creating a ChangeLog file from SVN
 #
@@@@ -11,12 +11,13 @@@@ if test -z "$PARAM"; then
     PARAM=".";
 fi;
 
-CURRENT=`dirname $0`;
+CURRENT=`dirname "$0"`;
 
 echo "Fetching committers...";
 svn cat svn://anonsvn.kde.org/home/kde/trunk/kde-common/accounts > /tmp/accounts.$PPID
 
