		x11/gnome/libgnome \
		x11/gnome/libgnomecanvas \
		x11/gnome/libbonoboui

MODGNOME_LDFLAGS=	-L${X11BASE}/lib

post-install:
	rm ${PREFIX}/lib/libglade/2.0/*.{a,la}

.include <bsd.port.mk>
