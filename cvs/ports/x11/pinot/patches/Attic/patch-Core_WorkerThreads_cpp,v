+#if (defined HAVE_SYSCONF && ! defined __OpenBSD__)
 	m_numCPUs = sysconf(_SC_NPROCESSORS_ONLN);
+#elif defined __OpenBSD__
+	int mib[2], ncpus;
+	size_t len;
+	mib[0] = CTL_HW;
+	mib[1] = HW_NCPU;
+	len = sizeof(ncpus);
+	if (sysctl(mib, 2, &ncpus, &len, NULL, 0) > 0) {
+	    m_numCPUs = ncpus;
+	} else {
+	    m_numCPUs = 1;
+	}
 #endif
