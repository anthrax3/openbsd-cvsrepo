1.5
log
@fix getcloudmap
@
text
@#! /bin/sh
# Marc Espie, 2000
# Public domain

PATH=/bin:/usr/bin
export PATH

x=`ftp -o - \
'http://www.fourmilab.ch/cgi-bin/uncgi/Earth?imgsize=640&opt=-p&lat=-21&ns=North&lon=-134&ew=West&alt=986&img=irsat.bmp&daynight=-d' \
| grep "img src" | awk -F\" '{ print $2 }'`
ftp -o clouds.gif "http://www.fourmilab.ch$x"
@


