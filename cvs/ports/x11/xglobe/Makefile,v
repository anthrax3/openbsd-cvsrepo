d33 1
a33 1
	touch ${WRKSRC}/map.bmp
d35 2
a36 2
post-install:
	rm ${PREFIX}/lib/xglobe/map.bmp
d39 8
a46 1
SUPDISTFILES=${DISTNAME}${EXTRACT_SUFX} ${DISTNAME}-no-map${EXTRACT_SUFX}
d48 5
a52 1
LIB_DEPENDS=qt.1.45::x11/qt
d54 1
a54 3
MAKE_FLAGS=XGLOBE_DIR=${PREFIX}
