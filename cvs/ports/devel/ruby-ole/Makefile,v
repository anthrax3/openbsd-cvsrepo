CATEGORIES =	devel

# MIT
PERMIT_PACKAGE_CDROM =	 Yes

MODULES =		lang/ruby

CONFIGURE_STYLE =	ruby gem

MODRUBY_TEST =	rake

.include <bsd.port.mk>
