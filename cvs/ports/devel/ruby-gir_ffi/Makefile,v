MODULES=	lang/ruby

BUILD_DEPENDS=	${RUN_DEPENDS}
RUN_DEPENDS=	devel/ruby-ffi,${MODRUBY_FLAVOR}>=1.8,<=2.0 \
		devel/ruby-indentation,${MODRUBY_FLAVOR}>=0.1.1,<0.2.0
TEST_DEPENDS=	devel/ruby-bundler,${MODRUBY_FLAVOR}

CONFIGURE_STYLE=ruby gem

