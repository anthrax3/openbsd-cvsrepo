REVISION=	1
CATEGORIES=	devel

MAINTAINER=	Sam Smith <S@@msmith.net>

# perl
PERMIT_PACKAGE_CDROM=	Yes

RUN_DEPENDS=	devel/p5-Exporter-Lite

.include <bsd.port.mk>
@


