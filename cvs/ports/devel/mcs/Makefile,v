@# $OpenBSD: Makefile,v 1.9 2015/05/22 11:31:13 ajacoutot Exp $

COMMENT =	abstract the storage of configuration settings

DISTNAME =	libmcs-0.7.2
PKGNAME =	${DISTNAME:S/lib//}
REVISION =	2

SHARED_LIBS =	mcs	1.0

CATEGORIES =	devel

HOMEPAGE =	https://github.com/atheme/libmcs

# BSD
