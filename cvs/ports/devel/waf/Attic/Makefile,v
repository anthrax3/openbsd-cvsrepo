	cp ${WRKSRC}/waf{,.mine}
d35 1
a35 1
	cd ${WRKSRC} && ${MODPY_BIN} ./waf install --yes --prefix=${PREFIX}
d40 1
a40 1
	${INSTALL_SCRIPT} ${WRKSRC}/waf.mine ${PREFIX}/bin/waf
