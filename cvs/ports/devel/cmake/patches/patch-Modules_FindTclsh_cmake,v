+  set(TCL_TCLSH_NAMES
+    tclsh${MODTCL_VERSION}
+    )
+else(MODTCL_VERSION)
+  set(TCL_TCLSH_NAMES
+    tclsh
+    tclsh${TCL_LIBRARY_VERSION} tclsh${TK_LIBRARY_VERSION} tclsh${TK_WISH_VERSION}
+    tclsh86 tclsh8.6
