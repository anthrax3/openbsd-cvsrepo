1.13
log
@Add explicit lua52/lua53 FLAVORS where supported.

Discussed on ports@@, sthen@@ agrees with the direction.
@
text
@# $OpenBSD: Makefile,v 1.12 2016/03/18 20:49:27 naddy Exp $

COMMENT=	library for bitwise operations in lua

V=		1.0.2
DISTNAME=	LuaBitOp-$V
PKGNAME=	luabitop-$V
CATEGORIES=	devel
REVISION=	0
MASTER_SITES=	${HOMEPAGE}/download/

HOMEPAGE=	http://bitop.luajit.org/

# MIT
PERMIT_PACKAGE_CDROM=	Yes

USE_GMAKE=	Yes
MODULES=	lang/lua
TEST_DEPENDS+=${BASE_PKGPATH}
MAKE_ENV+=	INCLUDES=-I${MODLUA_INCL_DIR}

FLAVORS=	lua52
FLAVOR?=

REGRESS_FILES=	bittest md5test bitbench nsievebits

do-install:
	${INSTALL_DATA_DIR} ${MODLUA_LIBDIR} ${MODLUA_DOCDIR}
	${INSTALL_DATA} ${WRKBUILD}/bit.so ${MODLUA_LIBDIR}
	cd ${WRKSRC}/doc && \
		find . -type d \
			-exec ${INSTALL_DATA_DIR} ${MODLUA_DOCDIR}/{} \; && \
		find . ! -type d \
			-exec ${INSTALL_DATA} -m 644 {} ${MODLUA_DOCDIR}/{} \;
do-test:
.for r in ${REGRESS_FILES}
	${MODLUA_BIN} ${WRKSRC}/$r.lua
.endfor

.include <bsd.port.mk>
@


