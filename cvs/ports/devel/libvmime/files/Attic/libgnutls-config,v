text
@#!/bin/sh

usage()
{
	cat <<EOF
Usage: libgnutls-config [OPTIONS]
Options:
	[--version]
	[--libs]
	[--cflags]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --version)
      echo "`pkg-config --modversion gnutls`"
      exit 0
      ;;
    --cflags)
      echo "`pkg-config --cflags gnutls`"
      ;;
    --libs)
      echo "`pkg-config --libs gnutls`"
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done
@


