TEST_DEPENDS=		shells/bash \
			textproc/gdiff
TEST_FLAGS=		SHELL=${LOCALBASE}/bin/bash

pre-test:
	@@ln -fs ${LOCALBASE}/bin/gdiff ${WRKDIR}/bin/diff
@


