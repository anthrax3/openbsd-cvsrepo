-	  gzip <$$F >$(DESTDIR)$(MAN3DIR)/$${F#man/}.gz; \
+	  install -c $$F $(DESTDIR)$(MAN3DIR)/$${F#man/}; \
 	done
 	for F in man/*.7; do \
