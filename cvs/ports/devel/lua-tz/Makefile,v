GH_ACCOUNT =	daurnimator
GH_PROJECT =	luatz
GH_TAGNAME =	v${V}
REVISION =	0

CATEGORIES =	devel

MAINTAINER =	Frederic Cambus <fcambus@@openbsd.org>

# MIT
