1.7
log
@Dont use INSTALL_* macros in do-extract
Spotted by Thomas Nordin <nordin@@cse.ogi.edu>
@
text
@d1 1
a1 1
# $OpenBSD: Makefile,v 1.6 2001/01/02 16:30:02 avsm Exp $
d4 2
a6 3
DISTFILES=	2.30
DIST_SUBDIR=	cvs2cl

d8 2
a9 1
NEED_VERSION=	1.340
a10 1
HOMEPAGE=	http://www.red-bean.com/cvs2cl/
d13 1
a13 1
# (license is GPL)
d20 5
a24 1
EXTRACT_ONLY=	# no extract
d26 1
a26 8
SEPARATE_BUILD=	concurrent

DIST_LOC=	${FULLDISTDIR}/${DISTFILES}
FETCH_BEFORE_ARGS= -o ${DIST_LOC}

do-extract:
	@@mkdir -p ${WRKSRC}
	@@cp ${DIST_LOC} ${WRKSRC}/cvs2cl
d29 1
a29 1
	${INSTALL_SCRIPT} ${DIST_LOC} ${PREFIX}/bin/cvs2cl
@


