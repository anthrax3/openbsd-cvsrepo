			:ruby-ruby_parser->=2.0:devel/ruby-ruby_parser \
			:ruby-sexp_processor->=3.0:devel/ruby-sexp_processor
d24 1
a24 3
PKG_ARCH = *

REGRESS_DEPENDS  =	:ruby-hoe->=2.3.3:devel/ruby-hoe
