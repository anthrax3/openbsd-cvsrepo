 ELF_LINK_CMD		= $(ELF_LINK)
+
+# GCC 3.3 optimizer problems: http://marc.info/?m=125562659714004
+slarrfun_C_FLAGS	= -O0
 
 NORMAL_LIB = lib$(THIS_LIB).a
 OBJDIR_NORMAL_LIB = $(OBJDIR)/$(NORMAL_LIB)
