1.5
log
@tap(4) and sudo cleanup for QEMU, from Brad.
@
text
@#! /bin/sh

_ETHER=trunk0
_BRIDGE=bridge0

# Let the environment over-ride this
[ "$BRIDGE" ] || BRIDGE=${_BRIDGE}
[ "$ETHER" ] || ETHER=${_ETHER}

if test `id -u` -ne 0; then
	DOAS=doas
fi

$DOAS ifconfig $BRIDGE del $1 > /dev/null 2>&1
@


