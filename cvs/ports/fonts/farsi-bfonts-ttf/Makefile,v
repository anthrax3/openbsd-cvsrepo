d31 2
a34 7
PKG_ARCH=	*

FONTSDIR=	${PREFIX}/share/fonts/farsi-bfonts

do-install:
	${INSTALL_DATA_DIR} ${FONTSDIR}
	${INSTALL_DATA} ${WRKSRC}/*.ttf ${FONTSDIR}
@


