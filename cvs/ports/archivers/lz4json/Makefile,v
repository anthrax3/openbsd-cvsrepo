@# $OpenBSD$

COMMENT =	decompressor for mozilla lz4json format

DISTNAME =	lz4json-0.0.20141228
GH_ACCOUNT =	andikleen
GH_PROJECT =	lz4json
GH_COMMIT =	e3e6365ded1b5dcfe1ce69ce2c764dd010526c81

CATEGORIES =	archivers

# BSD 2-Clause
PERMIT_PACKAGE_CDROM =	Yes

WANTLIB += c lz4

LIB_DEPENDS =	archivers/lz4

MAKE_FLAGS =	CFLAGS="-Wall ${CFLAGS}" \
		CPPFLAGS="-I${LOCALBASE}/include" \
		LDFLAGS="-L${LOCALBASE}/lib -llz4 ${LDFLAGS}"

ALL_TARGET =

do-install:
	${INSTALL_PROGRAM} ${WRKSRC}/lz4jsoncat ${PREFIX}/bin

.include <bsd.port.mk>
@


1.1.1.1
log
@Import lz4json; ok sthen@@

cat pkg/DESCR:
A little utility to unpack lz4json files as generated by Firefox's book
mark backups.  This is a different format from what the normal lz4
utility expects.  The data is dumped to stdout.

$ lz4jsoncat bookmarks-2014-12-27_151_0UCIWGB4x3hhQXpuSMs5WQ==.jsonlz4

@
text
@@
