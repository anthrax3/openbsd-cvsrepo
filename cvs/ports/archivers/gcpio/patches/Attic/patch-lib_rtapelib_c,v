+  uint64_t u = offset < 0 ? - (uint64_t) offset : (uint64_t) offset;
   char *p = operand_buffer + sizeof operand_buffer;
 
   *--p = 0;
@@@@ -667,9 +667,9 @@@@ rmt_ioctl__ (int handle, int operation, char *argument
