EXTRACT_AFTER_ARGS=
d10 3
a12 2
MAKEFILE = makefile
ALL_TARGET = hoc
d16 4
a20 6
MAN1=		hoc.1

# This is because we don't use tar+gzip; is there an easier way?
do-extract:
	@@mkdir ${WRKDIR}
	@@cd ${WRKDIR}; ${EXTRACT_CMD} ${DISTDIR}/${DISTNAME}${EXTRACT_SUFX}
d23 2
a24 2
	${INSTALL_PROGRAM} ${WRKSRC}/hoc   ${PREFIX}/bin
	${INSTALL_MAN}     ${WRKSRC}/hoc.1 ${PREFIX}/man/man1
