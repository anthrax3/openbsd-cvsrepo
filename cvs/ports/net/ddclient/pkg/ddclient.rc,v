1.5
log
@Fix pexp.
@
text
@#!/bin/sh
#
# $OpenBSD: ddclient.rc,v 1.4 2015/03/22 08:30:20 pascal Exp $

daemon="${TRUEPREFIX}/sbin/ddclient"
daemon_user="_ddclient"

. /etc/rc.d/rc.subr

pexp="perl: ddclient - .*"

rc_pre() {
	install -d -o _ddclient -g _ddclient /var/run/ddclient
}

rc_cmd $1
@


