1.16
log
@Remove the maintainer for now. They've been afk for 13+ years, the email
address bounces, and I can't track them down.
@
text
@# $OpenBSD: Makefile,v 1.15 2015/03/14 20:52:46 naddy Exp $

COMMENT=		performs consistency checks on BIND files

DISTNAME=		nslint-2.0.2
REVISION=		2
CATEGORIES=		net

PERMIT_PACKAGE_CDROM=	Yes

MASTER_SITES=		ftp://ftp.ee.lbl.gov/old/

FLAVORS=		static
FLAVOR?=

.if ${FLAVOR} == "static"
CONFIGURE_ENV+=		LDFLAGS="${STATIC}"
.else
WANTLIB=		c
.endif

CONFIGURE_STYLE=	gnu
ALL_TARGET=		nslint
INSTALL_TARGET=		install install-man

NO_TEST=		Yes

.include <bsd.port.mk>
@


