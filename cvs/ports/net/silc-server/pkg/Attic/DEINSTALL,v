1.7
log
@zap INSTALL/DEINSTALL
@
text
@#!/bin/sh
# $OpenBSD: DEINSTALL,v 1.6 2004/08/08 05:56:18 brad Exp $
#
# silc-server de-installation

PATH=/bin:/usr/bin:/sbin:/usr/sbin
PREFIX=${PKG_PREFIX:-/usr/local}
CONFIG_DIR=${CONFDIR}
LOG_DIR=/var/log/silcd
SILCDUSER=_silcd
SILCDGROUP=_silcd

if [ "$PKG_DELETE_EXTRA" != Yes ]; then
    echo
    echo "+---------------"
    echo "| To completely deinstall the $1 package you need"
    echo "| to perform these steps as root:"
    echo "|"
    echo "|           userdel $SILCDUSER"
    echo "|           groupdel $SILCDGROUP"
    echo "|           rm -rf $CONFIG_DIR"
    echo "|           rm -rf $LOG_DIR"
    echo "|"
    echo "| Do not do this if you plan on re-installing $1"
    echo "| at some future time."
    echo "+---------------"
    echo
fi

exit 0
@


