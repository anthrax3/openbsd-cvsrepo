@# $OpenBSD: Makefile,v 1.46 2016/12/11 09:29:05 ajacoutot Exp $

COMMENT =	Internet Relay Chat server

DISTNAME =	ircd-hybrid-8.2.22
CATEGORIES =	net
MASTER_SITES =	${MASTER_SITE_SOURCEFORGE:=ircd-hybrid/}
EXTRACT_SUFX =	.tgz

