+	if (!getuid()) {
+		struct passwd *pw;
+		pw = getpwnam("_hping");
+		if (pw == NULL) {
+			printf("[main] can't drop privs: no such user\n");
+			exit(1);
+		}
+		if (setgroups(1, &pw->pw_gid) == -1 ||
+		    setresgid(pw->pw_gid, pw->pw_gid, pw->pw_gid) == -1 ||
+		    setresuid(pw->pw_uid, pw->pw_uid, pw->pw_uid) == -1) {
+			printf("[main] can't drop privs: %s\n", strerror(errno));
+			exit(1);
+		}
+	}
