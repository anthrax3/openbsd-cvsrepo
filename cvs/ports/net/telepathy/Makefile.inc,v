    # no matter whether we use --disable-gtk-doc or not.
    CONFIGURE_ENV +=ac_cv_path_GTKDOC_CHECK="" \
                    ac_cv_path_GTKDOC_REBASE="" \
                    ac_cv_path_GTKDOC_MKPDF=""
