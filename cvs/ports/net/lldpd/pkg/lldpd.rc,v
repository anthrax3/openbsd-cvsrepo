@rc_ overrides are put after sourcing /etc/rc.d/rc.subr.

ok sthen@@ (maintainer)
@
text
@#!/bin/sh
#
# $OpenBSD: lldpd.rc,v 1.3 2016/06/28 15:50:27 sthen Exp $

daemon="${TRUEPREFIX}/sbin/lldpd"

. /etc/rc.d/rc.subr

pexp="lldpd: monitor."
rc_reload=NO

rc_pre() {
	install -d -o _lldpd /var/run/lldpd
}

rc_cmd $1
@


