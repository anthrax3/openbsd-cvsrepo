PYTHON_VER=	2.4

BUILD_DEPENDS+=	:python-${PYTHON_VER}*:lang/python/${PYTHON_VER} \
		:p5-XML-Parser-*:textproc/p5-XML-Parser
RUN_DEPENDS+=	:python-${PYTHON_VER}*:lang/python/${PYTHON_VER} \
		:dbus-python-*:x11/dbus-python \
d62 1
