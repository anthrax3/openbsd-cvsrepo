		 --with-python=${LOCALBASE}/bin/python${PYTHON_VER}
d92 1
a92 1
PYTHON_SCRIPTS=	gaim-notifications-example gaim-remote gaim-url-handler
d98 1
d100 1
a100 2
	@@perl -pi -e 's#%python%#${LOCALBASE}/bin/python${PYTHON_VER}#g' \
	    ${PREFIX}/bin/${f}
