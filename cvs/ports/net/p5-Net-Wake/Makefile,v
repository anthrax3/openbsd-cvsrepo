PKG_ARCH=	*
DISTNAME=	Net-Wake-0.02
REVISION=	1
CATEGORIES=	net

MAINTAINER=	Okan Demirmen <okan@@openbsd.org>

# Perl 
PERMIT_PACKAGE_CDROM=	Yes

.include <bsd.port.mk>
@


