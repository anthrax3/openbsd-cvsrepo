#ifndef __IM_SNDIO_H__
#define __IM_SNDIO_H__

#include <sndio.h>
#include "inputmodule.h"
#include "thread/thread.h"
#include <ogg/ogg.h>

typedef struct
{
    struct sio_hdl *hdl;
    struct sio_par par;
    char **metadata;
    int newtrack;
    mutex_t metadatalock;
} im_sndio_state;

input_module_t *sndio_open_module(module_param_t *params);

#endif  /* __IM_SNDIO_H__ */
