text
@d1 1
a1 3
# $OpenBSD: DEINSTALL,v 1.2 1999/10/27 22:54:43 brad Exp $
#
# proftpd de-installation
d6 1
a6 1
CONFIG_FILE=/etc/proftpd.conf
d8 1
a8 3
rm -rf /var/run/proftpd

if [ -f ${CONFIG_FILE} ]; then
d14 1
a14 2
    echo "|           rm -f ${CONFIG_FILE}"
    echo "|           rm -rf /var/run/proftpd"
@


