+FILE *tempfile()
+{
+	FILE *f = NULL;
+	char t[] = "/tmp/deezer.XXXXXXX";
+	int fd = mkstemp(t);
+	if (fd != -1) {
+		unlink(t);
+		f = fdopen(fd, "w+");
+		if (f == NULL)
+			close(fd);
+	}
+	return f;
+}
 
 
