1.5
log
@Update to 20151120:
* fix a program hang upon invalid utf-8 sequences
* /lastlog no longer adds trailing ^Os to log files

ok Brad
@
text
@$OpenBSD: patch-source_log_c,v 1.4 2014/09/20 18:40:27 naddy Exp $
--- source/log.c.orig	Fri Nov 20 10:23:54 2015
+++ source/log.c	Wed Dec  2 17:40:09 2015
@@@@ -155,12 +155,19 @@@@ set_log_file(u_char *filename)
 void
 add_to_log(FILE *fp, u_char *line)
 {
+	time_t	t;
+	struct tm *tm;
+	char buf[32];
+
 	if (fp == NULL)
 		fp = irclog_fp;
 
 	if (fp)
 	{
-		fprintf(fp, "%s\n", line);
+		t = time(0);
+		tm = localtime(&t);
+		strftime(buf, sizeof buf, "%b %d %R", tm);
+		fprintf(fp, "[%s] %s\n", buf, line);
 		fflush(fp);
 	}
 }
