+ 		if(unwrapped->FRAG_nf == 0)
+ 			{
+ 			if( (ntohs(IPhead.length)-(unwrapped->IP_len))<8 )
+ 				return CORRUPT_IP;
  		memcpy(&UDPhead,(sp+PROTO_HEAD+(unwrapped->IP_len)),
  						sizeof(struct UDP_header));
