DISTNAME=		Net-Ping-External-0.13
REVISION=		0
CATEGORIES=		net
EXTRACT_SUFX=		.zip

MAINTAINER=		Gleydson Soares <gsoares@@openbsd.org>

# perl
PERMIT_PACKAGE_CDROM=	Yes

.include <bsd.port.mk>
@


