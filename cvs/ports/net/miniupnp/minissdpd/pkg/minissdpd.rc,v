text
@#!/bin/sh
#
# $OpenBSD: minissdpd.rc,v 1.1.1.1 2012/01/13 09:22:23 ajacoutot Exp $

daemon="${TRUEPREFIX}/sbin/minissdpd"
daemon_flags="-i 127.0.0.1"

. /etc/rc.d/rc.subr

rc_reload=NO

rc_cmd $1
@


