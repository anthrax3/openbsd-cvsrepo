1.23
log
@Remove MASTER_SITES=${MASTER_SITE_BACKUP} which is already taken care of by bsd.port.mk
@
text
@# $OpenBSD: Makefile,v 1.22 2013/03/11 11:07:41 espie Exp $

COMMENT=	Mahjongg game for X11

DISTNAME=       xmj
PKGNAME=	xmj-1.0
REVISION =	2
CATEGORIES=	games

# BSD
PERMIT_PACKAGE_CDROM=	Yes

WANTLIB=	X11 Xau Xdmcp Xext c pthread-stubs xcb

CONFIGURE_STYLE=imake noman
NO_TEST=	Yes

pre-configure:
	@@perl -pi -e 's,_height=,_height ,g;' \
		-e 's,_width=,_width ,g' $i \
		${WRKSRC}/tiles/c*

.include <bsd.port.mk>
@


