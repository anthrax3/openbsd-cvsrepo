		CC=${CC} CXX=${CXX} CCFLAGS="${CFLAGS}" \
		CPPPATH="${X11BASE}/include ${LOCALBASE}/include/libpng" \
		LIBPATH="${X11BASE}/lib ${LOCALBASE}/lib" LIBS="-lm" \
		opengl=1
