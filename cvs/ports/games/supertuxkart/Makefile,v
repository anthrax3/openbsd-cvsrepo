a46 11

# now needs a modified, internal version of Irrlicht.  glorious.
pre-build:
	cd ${WRKSRC}/lib/irrlicht/source/Irrlicht && env -i \
		CC="${CC}" \
		CFLAGS="${CFLAGS}" \
		CXX="${CXX}" \
		CXXFLAGS="${CXXFLAGS}" \
		NDEBUG=1 \
		CPPFLAGS="-DNO_IRR_COMPILE_WITH_JOYSTICK_EVENTS_" \
		${MAKE_PROGRAM}
@


