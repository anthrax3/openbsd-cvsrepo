-	find fonts -name \( "*.tfm" -o -name "*.vf" \) -print | cpio -pld $(texmf)
+	find fonts -name \( "*.tfm" -o -name "*.vf" \) -print | cpio \
+	  -pld $(DESTDIR)/$(texmf)
 
 uninstall-data:
 	rm -f $(man1dir)/dvilj.$(manext)
