+		free((char *) t);
+		return (NULL);
+	}
+
+	/* Note using strlen(buf) here will waste a few bytes, as the
+	   various text attributes are counted into this length too. */
+	t->cstring = (char *) calloc((unsigned)(strlen(buf)+1), sizeof(char));
+	if (t->cstring == NULL)
+		return (NULL);
