static void
SwapTimecoord(xTimecoord * pCoord)
{
    swapl(&pCoord->time);
    swaps(&pCoord->x);
    swaps(&pCoord->y);
}

void
SwapTimeCoordWrite(ClientPtr pClient, int size, xTimecoord * pRep)
{
    int i, n;
    xTimecoord *pRepT;

    n = size / sizeof(xTimecoord);
    pRepT = pRep;
    for (i = 0; i < n; i++) {
        SwapTimecoord(pRepT);
        pRepT++;
    }
    WriteToClient(pClient, size, pRep);

}

