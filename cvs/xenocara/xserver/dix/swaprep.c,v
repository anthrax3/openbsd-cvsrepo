static void
SwapRGB(xrgb * prgb)
{
    swaps(&prgb->red);
    swaps(&prgb->green);
    swaps(&prgb->blue);
}

void
SQColorsExtend(ClientPtr pClient, int size, xrgb * prgb)
{
    int i, n;
    xrgb *prgbT;

    n = size / sizeof(xrgb);
    prgbT = prgb;
    for (i = 0; i < n; i++) {
        SwapRGB(prgbT);
        prgbT++;
    }
    WriteToClient(pClient, size, prgb);
}

