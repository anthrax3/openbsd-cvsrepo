void
xf86OSInitVidMem(VidMemInfoPtr pVidMem)
{
    pVidMem->initialised = TRUE;
}

/*
 * Do all initialisation that need root privileges
 */
void
xf86PrivilegedInit(void)
{
    xf86OpenConsole();
}

