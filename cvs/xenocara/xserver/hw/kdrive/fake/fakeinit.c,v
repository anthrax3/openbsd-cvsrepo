    fakeDPMS,                   /* dpms */
    fakeDisable,                /* disable */
    fakeRestore,                /* restore */
    fakeScreenFini,             /* scrfini */
    fakeCardFini,               /* cardfini */

    0,                          /* initCursor */
    0,                          /* enableCursor */
    0,                          /* disableCursor */
    0,                          /* finiCursor */
    0,                          /* recolorCursor */

    0,                          /* initAccel */
    0,                          /* enableAccel */
    0,                          /* disableAccel */
    0,                          /* finiAccel */

    fakeGetColors,              /* getColors */
    fakePutColors,              /* putColors */
};
