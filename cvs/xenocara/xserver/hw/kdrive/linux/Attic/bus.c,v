static int
BusInit (KdPointerInfo *pi)
{
    int	    i, fd = 0;

    if (!pi->path || (strcmp(pi->path, "auto") == 0))
    {
        for (i = 0; i < NUM_BUS_NAMES; i++)
        {
            if ((fd = open (BusNames[i], 0)) > 0)
            {
                close(fd);
                if (pi->path)
                    xfree(pi->path);
                pi->path = KdSaveString(BusNames[i]);
                return Success;
            }
        }
    }
    else
    {
        if ((fd = open(pi->path, 0)) > 0)
        {
            close(fd);
            return Success;
        }
    }

    return !Success;
}
