##### RULES #####

.SUFFIXES:
.SUFFIXES: .c

.c: $(LIB_DEP)
	$(APP_CC) -I$(INCDIR) $(CFLAGS) $(LDFLAGS) $< $(LIBS) -o $@@



##### TARGETS ######

default: $(PROGS)


clean:
	-rm -f $(PROGS)
	-rm -f *.o *~

