1.6
log
@remove the now unused Mesa 10.2.9 code
@
text
@#######################################################################
# SConscript for xlib winsys


Import('*')

if env['platform'] in ('cygwin', 'darwin', 'freebsd', 'linux', 'sunos'):

    env = env.Clone()

    env.Append(CPPPATH = [
        '#/src/gallium/include',
        '#/src/gallium/auxiliary',
        '#/src/gallium/drivers',
    ])

    ws_xlib = env.ConvenienceLibrary(
        target = 'ws_xlib',
        source = [
           'xlib_sw_winsys.c',
        ]
    )
    env.Alias('ws_xlib', ws_xlib)
    Export('ws_xlib')
@


