1.4
log
@remove the now unused Mesa 10.2.9 code
@
text
@Import('*')

env = env.Clone()

if env['suncc']:
	print 'warning: not building svga'
	Return()

if env['gcc'] or env['clang']:
	env.Append(CPPDEFINES = [
		'HAVE_STDINT_H', 
		'HAVE_SYS_TYPES_H',
	])
	
env.Prepend(CPPPATH = [
	'include',
])

env.Append(CPPDEFINES = [
])

sources = env.ParseSourceList('Makefile.sources', 'C_SOURCES')

svga = env.ConvenienceLibrary(
	target = 'svga',
	source = sources,
)

env.Alias('svga', svga)

Export('svga')
@


