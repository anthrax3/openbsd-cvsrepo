	common/egl_g3d_st.c \
	common/egl_g3d_sync.c \
	common/native_helper.c \
	common/native_wayland_drm_bufmgr_helper.c

if HAVE_EGL_PLATFORM_X11
libegl_la_SOURCES += \
	x11/glxinit.c \
	x11/native_dri2.c \
	x11/native_x11.c \
	x11/native_ximage.c \
