text
@#######################################################################
# SConscript for xlib state_tracker

Import('*')

env = env.Clone()

env.Append(CPPPATH = [
    '#/src/mapi',
    '#/src/mesa',
    '#/src/mesa/main',
])

st_xlib = env.ConvenienceLibrary(
    target = 'st_xlib',
    source = env.ParseSourceList('Makefile.sources', 'C_SOURCES')
)
Export('st_xlib')
@


