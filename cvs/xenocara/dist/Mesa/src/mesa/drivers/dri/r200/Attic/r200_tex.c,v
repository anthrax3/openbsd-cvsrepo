	|| (target == GL_TEXTURE_2D) 
#if ENABLE_HW_3D_TEXTURE
	|| (target == GL_TEXTURE_3D)
#endif
	|| (target == GL_TEXTURE_CUBE_MAP)
	|| (target == GL_TEXTURE_RECTANGLE_NV) ) {
      assert( texObj->DriverData != NULL );
   }
