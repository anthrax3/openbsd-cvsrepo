AM_TESTS_ENVIRONMENT = \
	AM_SRCDIR=${srcdir}

TESTS=check-pc-requires

EXTRA_DIST = \
tools/README \
tools/api_conv.pl \
tools/constants \
autogen.sh \
$(TESTS)

