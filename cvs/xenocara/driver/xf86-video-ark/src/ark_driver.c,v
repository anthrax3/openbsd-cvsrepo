#define PIOOFFSET hwp->PIOOffset
#else
#define PIOOFFSET 0
#endif

#include <string.h>

/*
 * prototypes
 */
static const OptionInfoRec * ARKAvailableOptions(int chipid, int busid);
static void ARKIdentify(int flags);
