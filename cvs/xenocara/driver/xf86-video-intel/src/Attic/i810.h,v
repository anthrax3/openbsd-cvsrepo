#ifndef _I810_H_
#define _I810_H_

#include <stdint.h>
#include "compiler.h"
#include "xf86PciInfo.h"
#include "xf86Pci.h"
#include "i810_reg.h"
#include "xaa.h"
#include "xf86Cursor.h"
#include "xf86xv.h"
#include "vbe.h"
#include "vgaHW.h"

#include "xorg-server.h"
