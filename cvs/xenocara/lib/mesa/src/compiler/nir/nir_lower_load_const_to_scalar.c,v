static bool
lower_load_const_to_scalar_block(nir_block *block, void *data)
{
   nir_foreach_instr_safe(block, instr) {
      if (instr->type == nir_instr_type_load_const)
         lower_load_const_instr_scalar(nir_instr_as_load_const(instr));
   }

   return true;
}

