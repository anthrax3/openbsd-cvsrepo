#ifndef NDEBUG
static bool
is_passthru_format(uint32_t format)
{
   switch (format) {
   case BRW_SURFACEFORMAT_R64_PASSTHRU:
   case BRW_SURFACEFORMAT_R64G64_PASSTHRU:
   case BRW_SURFACEFORMAT_R64G64B64_PASSTHRU:
   case BRW_SURFACEFORMAT_R64G64B64A64_PASSTHRU:
      return true;
   default:
      return false;
   }
}
