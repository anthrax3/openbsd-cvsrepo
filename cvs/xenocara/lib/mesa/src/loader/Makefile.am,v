	$(top_builddir)/src/mesa/drivers/dri/common/libxmlconfig.la

endif

if HAVE_LIBDRM
libloader_la_CPPFLAGS += \
	$(LIBDRM_CFLAGS)

libloader_la_LIBADD += \
	$(LIBDRM_LIBS)
endif
