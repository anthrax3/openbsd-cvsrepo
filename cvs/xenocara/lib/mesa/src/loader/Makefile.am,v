	-I$(top_srcdir)/src/mesa/drivers/dri/common/ \
	-I$(top_builddir)/src/mesa/drivers/dri/common/ \
	-I$(top_srcdir)/src/mesa/ \
	-I$(top_srcdir)/src/mapi/ \
	-DUSE_DRICONF

