/* This shouldn't be used by explicit INTERP opcodes. */
static unsigned select_interp_param(struct si_shader_context *ctx,
				    unsigned param)
{
	if (!ctx->shader->key.ps.prolog.force_persample_interp ||
	    !ctx->is_monolithic)
		return param;
