static LLVMValueRef build_gep0(struct si_shader_context *ctx,
			       LLVMValueRef base_ptr, LLVMValueRef index)
{
	LLVMValueRef indices[2] = {
		LLVMConstInt(ctx->i32, 0, 0),
		index,
	};
