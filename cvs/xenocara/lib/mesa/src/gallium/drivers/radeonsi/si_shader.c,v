static bool tgsi_is_array_sampler(unsigned target)
d2258 1
a2258 1
	return target == TGSI_TEXTURE_1D_ARRAY ||
d2260 1
a2260 1
	       target == TGSI_TEXTURE_2D_ARRAY ||
