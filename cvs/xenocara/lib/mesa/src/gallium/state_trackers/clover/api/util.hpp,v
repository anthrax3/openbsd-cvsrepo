@Import Mesa 13.0.2
@
text
@a70 11

   ///
   /// Return an API object from an intrusive reference to a Clover object,
   /// incrementing the reference count of the object.
   ///
   template<typename T>
   typename T::descriptor_type *
   ret_object(const intrusive_ref<T> &v) {
      v().retain();
      return desc(v());
   }
@

