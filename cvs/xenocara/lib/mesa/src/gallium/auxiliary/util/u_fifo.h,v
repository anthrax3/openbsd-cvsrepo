#ifndef U_FIFO_H
#define U_FIFO_H

#include "util/u_memory.h"

struct util_fifo
{
   size_t head;
   size_t tail;
   size_t num;
   size_t size;
};

static inline struct util_fifo *
u_fifo_create(size_t size)
{
   struct util_fifo *fifo;
   fifo = MALLOC(sizeof(*fifo) + size * sizeof(void*));

   fifo->head = 0;
   fifo->tail = 0;
   fifo->num = 0;
   fifo->size = size;

   return fifo;
}

static inline boolean
u_fifo_add(struct util_fifo *fifo, void *ptr)
{
   void **array = (void**)&fifo[1];
   if (fifo->num >= fifo->size)
      return FALSE;

   if (++fifo->head >= fifo->size)
      fifo->head = 0;

   array[fifo->head] = ptr;

   ++fifo->num;

   return TRUE;
}

static inline boolean
u_fifo_pop(struct util_fifo *fifo, void **ptr)
{
   void **array = (void**)&fifo[1];

   if (!fifo->num)
      return FALSE;

   if (++fifo->tail >= fifo->size)
      fifo->tail = 0;

   *ptr = array[fifo->tail];

   ++fifo->num;

   return TRUE;
}

static inline void
u_fifo_destroy(struct util_fifo *fifo)
{
   FREE(fifo);
}

#endif
@


