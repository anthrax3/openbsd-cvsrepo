  <paramdef>Cursor <parameter>cursor</parameter></paramdef>
  <paramdef>Time <parameter>time</parameter></paramdef>
</funcprototype>
</funcsynopsis>
<!-- .FN -->
<variablelist>
  <varlistentry>
