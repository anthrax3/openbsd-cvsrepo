  <row>
    <entry><symbol>XkbAXN_SKPressMask</symbol></entry>
    <entry>(1&lt;&lt;0)</entry>
    <entry>Slow key press notification wanted</entry>
  </row>
  <row>
    <entry><symbol>XkbAXN_SKAcceptMask</symbol></entry>
