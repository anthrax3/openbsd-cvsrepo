endif

if XCMS
USE_XCMS_LIBS = $(XCMS_LIBS)
endif

if XKB
USE_XKB_LIBS = $(XKB_LIBS)
endif

libX11_la_LDFLAGS = -version-number 6:3:0 -no-undefined

