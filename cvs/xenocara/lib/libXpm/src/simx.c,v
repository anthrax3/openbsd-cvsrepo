/* I get only 1 plane but 8 bits per pixel,
   so I think BITSPIXEL should be depth */
int
XDefaultDepth(Display *display, Screen *screen)
{
    int d, b;

    b = GetDeviceCaps(*display, BITSPIXEL);
    d = GetDeviceCaps(*display, PLANES);
    return (b);
}

