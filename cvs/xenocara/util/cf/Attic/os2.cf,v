#define OSName	OS/2
#define OSVendor	IBM
#define OSMajorVersion	4
#define OSMinorVersion	5
#define OSTeenyVersion	1

#define BootstrapCFlags   -DBSD43

#define StandardDefines   -DX_LOCALE -DX_WCHAR
