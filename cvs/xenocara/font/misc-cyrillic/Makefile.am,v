FONT_FILES = \
	koi12x24b \
	koi12x24 \
	koi5x8 \
	koi6x13b \
	koi6x13 \
	koi6x9 \
	koi7x14b \
	koi7x14 \
	koi8x13 \
	koi8x16b \
	koi8x16 \
	koi9x15b \
	koi9x15 \
	koi9x18b \
	koi9x18

BDF_FILES = $(FONT_FILES:%=%.bdf)
PCF_FILES = $(FONT_FILES:%=%.pcf$(COMPRESS_SUFFIX))

SUFFIXES = .bdf .pcf$(COMPRESS_SUFFIX)

.bdf.pcf$(COMPRESS_SUFFIX):
	@@rm -f $@@
	$(AM_V_GEN)$(BDFTOPCF) -t $< | $(COMPRESS) > $@@

fontdir = @@FONTDIR@@
font_DATA = $(PCF_FILES)
CLEANFILES = $(font_DATA)

EXTRA_DIST = $(BDF_FILES)

MAINTAINERCLEANFILES = ChangeLog INSTALL

install-data-hook:
	@@rm -f $(DESTDIR)$(fontdir)/fonts.dir
	$(MKFONTDIR) $(DESTDIR)$(fontdir)
	@@RUN_FCCACHE@@

distuninstallcheck:
	@@:


.PHONY: ChangeLog INSTALL

INSTALL:
	$(INSTALL_CMD)

ChangeLog:
	$(CHANGELOG_CMD)

dist-hook: ChangeLog INSTALL
@


