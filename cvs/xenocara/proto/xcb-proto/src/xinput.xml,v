        <pad bytes="3" />
    </request>

    <!-- GrabDeviceKey -->

    <enum name="ModifierDevice">
	<item name="UseXKeyboard"><value>255</value></item> <!-- 0xff -->
    </enum>

    <request name="GrabDeviceKey" opcode="15">
        <field type="WINDOW" name="grab_window" />
        <field type="CARD16" name="num_classes" />
