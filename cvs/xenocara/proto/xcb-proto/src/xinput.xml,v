        </reply>
    </request>

    <!-- ChangeDeviceDontPropagateList -->

    <enum name="PropagateMode">
        <item name="AddToList">      <value>0</value> </item>
        <item name="DeleteFromList"> <value>1</value> </item>
    </enum>

    <request name="ChangeDeviceDontPropagateList" opcode="8">
