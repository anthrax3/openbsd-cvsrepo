        <field type="TIMESTAMP" name="time" altenum="Time" />
        <!-- event specific fields -->
        <field type="ATOM"      name="property" />
        <field type="CARD8"     name="what" enum="PropertyFlag" />
        <pad bytes="11" />
        <!-- 32 byte boundary -->
    </event>

