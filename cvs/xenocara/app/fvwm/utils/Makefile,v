1.4
log
@xcb is no longer optional.
@
text
@# $OpenBSD: Makefile,v 1.3 2010/11/27 14:25:47 matthieu Exp $

.include "../Makefile.inc"

.PATH: ${DIST}/utils

PROG=	xpmroot
SRCS=	xpmroot.c

LDADD+= -lXpm -lXt -lICE -lSM -lXext -lX11 -lxcb -lXdmcp -lXau

.include <bsd.prog.mk>
.include <bsd.xorg.mk>
@


