static int
pcfskip(gzFile f, int n)
{
    char buf[32];
    int i, rc;
    while(n > 0) {
        i = (n > 32 ? 32 : n);
        rc = gzread(f, buf, i);
        if(rc != i)
            return -1;
        n -= rc;
    }
    return 1;
}

