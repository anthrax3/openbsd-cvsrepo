@/* -*- Mode: C; tab-width: 4 -*- */
/* run --- run an arbitrary mode */

#if !defined( lint ) && !defined( SABER )
static const char sccsid[] = "@@(#)run.c	5.00 2000/11/01 xlockmore";

#endif

/*-
