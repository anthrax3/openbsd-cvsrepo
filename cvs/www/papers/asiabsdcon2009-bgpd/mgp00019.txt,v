Minimal Config

 # global config
 AS 65042
 router-id 192.168.17.1
 # announce our PI address space
 network 192.168.17/24

 # neighbor config
 neighbor 192.168.7.42 {
        descr           "ISP A"
        remote-as       65123
 }

 # neighbor config with TCP MD5 signature
 neighbor 192.168.213.3 {
        descr           "ISP B"
        remote-as       65213
        tcp md5sig      password "74#senEjTYmhQ/f"
 }

