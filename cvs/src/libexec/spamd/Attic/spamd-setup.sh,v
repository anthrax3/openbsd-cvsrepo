pfcmd() {
	awk '{ printf("rdr inet proto tcp from %s to any port 25 -> 127.0.0.1 port 8025\n", $1); } '
d46 3
a48 6
W=`mktemp /tmp/_spamwXXXXXX` || {
	rm -f ${R}
	exit 1
}
trap "rm -f $R $W; exit 0" 0
trap "rm -f $R $W; exit 1" 1 2 3 13 15
a61 4
	-w)
		cat $2 | filter >> $W
		shift
		;;
d75 2
a76 1
cat $R | uniq | pfcmd | pfctl -a spamd:spews -f -
@


