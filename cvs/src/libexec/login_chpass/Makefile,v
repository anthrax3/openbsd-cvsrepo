1.9
log
@Delete YP password related code.  As a result, these can also be
pledged.  Keep an eye out for regressions, because they could be
uncomfortable.
ok beck semarie
@
text
@#	$OpenBSD: Makefile,v 1.8 2015/10/22 12:32:33 tedu Exp $

.PATH:  ${.CURDIR}/../../usr.bin/passwd

PROG=	login_chpass
SRCS=	login_chpass.c
MAN=	login_chpass.8
CFLAGS+=-Wall

BINOWN=	root
BINGRP=	auth
BINMODE=4555
BINDIR=	/usr/libexec/auth

.include <bsd.prog.mk>
@


1.8
log
@use crypt_checkpass instead of doing things the hard way with crypt.
@
text
@d1 1
a1 1
#	$OpenBSD: Makefile,v 1.7 2014/04/22 10:21:56 reyk Exp $
d3 1
a7 5

.PATH:  ${.CURDIR}/../../usr.bin/passwd

.include <bsd.own.mk>	# For YP

a8 7

.if (${YP:L} == "yes")
CFLAGS+=-DYP
SRCS+= yp_passwd.c pwd_check.c
DPADD+= ${LIBRPCSVC} ${LIBUTIL}
LDADD+= -lrpcsvc -lutil
.endif
@


