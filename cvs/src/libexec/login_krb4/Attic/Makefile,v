1.6
log
@krb4 bye bye
@
text
@#	$OpenBSD: Makefile,v 1.5 2002/05/11 00:20:20 espie Exp $

.include <bsd.own.mk>

PROG=	login_krb4
SRCS=	login.c
MAN=	${PROG}.8
CFLAGS+=-Wall -Werror -I${.CURDIR}/../login_passwd
.PATH:	${.CURDIR}/../login_passwd

.if (${KERBEROS:L} == "yes")
SRCS+=	login_krb4.c
DPADD+=	${LIBKRB} ${LIBCRYPTO} ${LIBDES}
LDADD+=	-lkrb -lcrypto -ldes
CFLAGS+=-DKRB4
.endif

DPADD+=	${LIBUTIL}
LDADD+=	-lutil

BINOWN=	root
BINGRP= auth
BINMODE=4555
BINDIR= /usr/libexec/auth

.include <bsd.prog.mk>
@


