1.7
log
@Update to sudo 1.7.1
@
text
@d1 1
a1 1
#	$OpenBSD: Makefile,v 1.6 2008/11/14 11:58:08 millert Exp $
a16 1
POD2MAN=/usr/bin/pod2man
a19 2
VERSION!=uname -rs
MANDATE!=date '+%B %e, %Y'
d23 5
a27 11
sudo.8: sudo.pod
	sed -f ${.CURDIR}/../varsub ${.ALLSRC} | ${POD2MAN} --quotes=none \
	    --name="SUDO" --section=8 --release="${VERSION}" \
	    --date="${MANDATE}" --center="OpenBSD Reference Manual" | \
	    sed '1s/^/.if n .ll 78n /' > $@@

sudoers.5: sudoers.pod
	sed -f ${.CURDIR}/../varsub ${.ALLSRC} | ${POD2MAN} --quotes=none \
	    --name="SUDOERS" --section=5 --release="${VERSION}" \
	    --date="${MANDATE}" --center="OpenBSD Reference Manual" | \
	    sed '1s/^/.if n .ll 78n /' > $@@
@


