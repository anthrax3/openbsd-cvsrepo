# FastCGI to CGI wrapper server
#
location /cgi-bin/ {
	fastcgi_pass	unix:run/slowcgi.sock;
	fastcgi_split_path_info	^(/cgi-bin/[^/]+)(.*);
	fastcgi_param	PATH_INFO $fastcgi_path_info;
	include		fastcgi_params;
d152 1
a152 1
.Xr nginx 8
