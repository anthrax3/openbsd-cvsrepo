#include <sys/types.h>
#include <sys/stat.h>

#include <err.h>
#include <stdio.h>

#include "extern.h"

void
ierr(const char *fname)
{
	warn("%s", fname);
	rval = 1;
}

void
oerr(void)
{
	err(1, "stdout");
}

void printfname(const char *fname)
{
	static int first = 1;
	(void)printf("%s==> %s <==\n", first ? "" : "\n", fname);
	first = 0;
	(void)fflush(stdout);
}
