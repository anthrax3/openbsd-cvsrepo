	com_isa_activate
a176 16
}

int
com_isa_activate(struct device *self, int act)
{
	struct com_softc *sc = (struct com_softc *)self;

	switch (act) {
	case DVACT_SUSPEND:
		break;
	case DVACT_RESUME:
		com_resume(sc);
		break;
	}

	return (0);
