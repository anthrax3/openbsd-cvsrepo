#ifndef _MACHINE_VFP_H_
#define	_MACHINE_VFP_H_

#ifdef _KERNEL

#define	VFP_KFPEN	(1 << 20)
#define	VFP_UFPEN	(3 << 20)

#ifndef LOCORE
void	vfp_init(void);
void	vfp_discard(struct proc *);
void	vfp_save(void);
void	vfp_enable(void);
int	vfp_fault(vaddr_t, uint32_t, trapframe_t *, int);
#endif

#endif

