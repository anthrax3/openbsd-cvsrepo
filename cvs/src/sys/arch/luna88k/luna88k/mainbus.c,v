	{ "pcm",   0x91000000, 4,  LUNA_88K|LUNA_88K2 }, /* NEC-9801-86 Sound board (under testing) */
d61 1
a61 1
	{ "pcex",  0x91000000, 4,  LUNA_88K|LUNA_88K2 }, /* PC-9801 extension slot */
