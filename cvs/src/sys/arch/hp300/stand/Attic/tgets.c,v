int
tgets(buf)
    char *buf;
{
    register int c;
    int i;
    register char *lp = buf;

    for (i = 240000; i > 0; i--) {
        c = tgetchar() & 0177;
        if (c) {
            for (;;) {
                switch (c) {
                case '\n':
                case '\r':
                    *lp = '\0';
                    putchar('\n');
                    return (1);
                case '\b':
                case '\177':
                    if (lp > buf) {
                        lp--;
                        putchar('\b');
                        putchar(' ');
                        putchar('\b');
                    }
                    break;
                case '#':
                    if (lp > buf)
                        --lp;
                    break;
                case 'r'&037: {
                    register char *p;

                    putchar('\n');
                    for (p = buf; p < lp; ++p)
                        putchar(*p);
                    break;
                }
                case '@@':
                case 'u'&037:
                case 'w'&037:
                    lp = buf;
                    putchar('\n');
                    break;
                default:
                    *lp++ = c;
                    putchar(c);
                }
                c = getchar() & 0177;
            }
        }
    }
    return (0);
}
