_OPTIONS+=	-DM68030 -DM68K_MMU_MOTOROLA
.endif
.if (${IDENT:M-DHP345} != "" || ${IDENT:M-DHP360} != "" || \
     ${IDENT:M-DHP370} != "" || ${IDENT:M-DHP375} != "" || \
     ${IDENT:M-DHP400} != "")
