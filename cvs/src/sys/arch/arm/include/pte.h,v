#define	L1_S_XSCALE_P	0x00000200	/* ECC enable for this section */
#define	L1_S_XSCALE_TEX(x) ((x) << 12)	/* Type Extension */

a168 2
#define	L1_C_XSCALE_P	0x00000200	/* ECC enable for this section */

a180 2
