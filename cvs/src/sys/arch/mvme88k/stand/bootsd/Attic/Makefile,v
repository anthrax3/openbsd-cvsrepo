bootsd.bug:	${OBJS} ${BUGCRT} ${LIBS}
	${LD} -N -T ${RELOC} ${BUGCRT} ${OBJS} ${LIBS} -o $@@
	@@size bootsd.bug

bootsd sdboot: bootsd.bug ${WRTVID}
	cp bootsd.bug bootsd.bin
	strip bootsd.bin
	@@if [ `size bootsd.bin | awk 'BEGIN {getline} {print $$1+$$2;}'` -gt 7168 ];\
	then\
		echo BOOTBLOCKS ARE TOO BIG;\
		fail;\
	fi
	${WRTVID} bootsd.bin

