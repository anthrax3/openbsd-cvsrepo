#define pmap_clear_reference(pa)	(ptemodify((pa), PTE_REF, 0))
#define pmap_is_modified(pa)		(ptebits((pa), PTE_CHG))
#define pmap_is_referenced(pa)		(ptebits((pa), PTE_REF))
