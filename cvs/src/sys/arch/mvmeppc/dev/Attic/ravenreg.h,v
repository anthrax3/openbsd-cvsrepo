#define RAVEN_MSOFF3		0x0000005C
#define RAVEN_MSOFF3_PREP	0x800000C0
d79 2
a80 2
#define PREP_CONFIG_ADD		0x80000CF8
#define PREP_CONFIG_DAT		0x80000CFC
d104 1
