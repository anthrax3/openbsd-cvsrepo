struct cpu_functions {
    int (*start) __P((struct cpu_info *));
    int (*stop) __P((struct cpu_info *));
};

#define CPU_ROLE_SP	0
#define CPU_ROLE_BP	1
#define CPU_ROLE_AP	2

struct cpu_attach_args {
	const char *caa_name;
	int cpu_number;
	int cpu_role;
	struct cpu_functions *cpu_func;
	int cpu_signature;
	int feature_flags;
};

#define MP_PICMODE	0x00000001      /* System booted in picmode */

#ifdef _KERNEL

int i386_ipi __P((int,int,int));
void i386_self_ipi __P((int));
int i386_ipi_init __P((int));

void identifycpu __P((struct cpu_info *));
void cpu_init __P((struct cpu_info *));
void cpu_init_first __P((void));

#endif

