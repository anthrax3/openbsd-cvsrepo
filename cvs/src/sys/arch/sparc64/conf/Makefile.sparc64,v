text
@d1 1
a1 1
#	$OpenBSD: Makefile.sparc64,v 1.55 2010/12/02 20:57:08 deraadt Exp $
d26 1
a26 1
CPPFLAGS=	${INCLUDES} ${IDENT} ${PARAM} -D_KERNEL
d71 2
