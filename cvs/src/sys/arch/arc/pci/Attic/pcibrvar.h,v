struct pcibr_config {
	bus_space_tag_t lc_iot;
	bus_space_tag_t lc_memt;
	struct arc_pci_chipset lc_pc;
	int	pci_init_done;
};

struct pcibr_softc {
	struct device	sc_dev;
	struct pcibr_config *sc_pcibr;
	struct arc_bus_space sc_bus_space;	/* Same for I/O and Mem */
};


