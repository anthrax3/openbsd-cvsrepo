/*
 * Memory config list used by pmap_bootstrap.
 */

#ifndef _MEMCONF_H_
#define _MEMCONF_H_

struct mem_descriptor {
	vm_offset_t	mem_start;
	u_int		mem_size;
};

#ifdef _KERNEL
#define	MAXMEMSEGS	16
extern struct mem_descriptor mem_layout[];
#endif

#endif
