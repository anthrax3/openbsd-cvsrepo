#include <stdlib.h>
#include "libtos.h"

void *
xmalloc(size)
	size_t	size;
{
	void *	p = malloc(size);

	if (p || !size)
		return(p);
	fatal(-1, "Virtual memory exhausted");
}

void *
xrealloc(ptr, size)
	void	*ptr;
	size_t	size;
{
	void *	p = realloc(ptr, size);

	if (p || !size)
		return(p);
	fatal(-1, "Virtual memory exhausted");
}
@


