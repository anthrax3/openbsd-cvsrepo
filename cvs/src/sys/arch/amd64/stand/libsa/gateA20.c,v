text
@d1 1
a1 1
/*	$OpenBSD$	*/
a38 2
int ps2model = 0;			/* Not set in amd64 */

a42 10


/*
 * "Probe"-style routine (no parameters) to turn A20 on
 */
void
gateA20on(void)
{
	gateA20(1);
}
@


