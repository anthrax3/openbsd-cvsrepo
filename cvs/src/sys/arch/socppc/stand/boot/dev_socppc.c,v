@d1 1
a1 1
/*	$OpenBSD: dev_socppc.c,v 1.1 2008/05/10 20:06:26 kettenis Exp $	*/
a71 16
}

int
getchar()
{
	int c = cngetc();

	if (c == '\r')
		c = '\n';

	if ((c < ' ' && c != '\n') || c == '\177')
		return(c);

	putchar(c);

	return(c);
