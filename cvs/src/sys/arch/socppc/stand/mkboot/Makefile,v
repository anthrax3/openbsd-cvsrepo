1.4
log
@convert to plain -fno-pie/-nopie.  Looks good to deraadt@@.
@
text
@#	$OpenBSD: Makefile,v 1.3 2012/08/21 14:46:19 pascal Exp $

.include "${.CURDIR}/../Makefile.inc"

MAN=	mkboot.8

.if ${MACHINE} == "socppc"
PROG=	mkboot
DPADD=	${LIBZ}
LDADD=	-lz
.else
NOPROG=
.endif

.include <bsd.prog.mk>
@


