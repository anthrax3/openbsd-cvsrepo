void
ipc_n2o(n, o)
	struct ipc_perm *n;
	struct oipc_perm *o;
{
	o->cuid = n->cuid;		/* XXX */
	o->cgid = n->cgid;		/* XXX */
	o->uid = n->uid;		/* XXX */
	o->gid = n->gid;		/* XXX */
	o->mode = n->mode;		/* XXX */
	o->seq = n->seq;
	o->key = n->key;
}

void
ipc_o2n(o, n)
	struct oipc_perm *o;
	struct ipc_perm *n;
{
	n->cuid = o->cuid;		/* XXX */
	n->cgid = o->cgid;		/* XXX */
	n->uid = o->uid;		/* XXX */
	n->gid = o->gid;		/* XXX */
	n->mode = o->mode;		/* XXX */
	n->seq = o->seq;
	n->key = o->key;
}

