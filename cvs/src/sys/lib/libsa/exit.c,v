#include <sys/stdarg.h>

#include "stand.h"

__dead void
panic(const char *fmt, ...)
{
	extern void closeall(void);
	va_list ap;
	static int paniced;

	if (!paniced) {
		paniced = 1;
		closeall();
	}

	va_start(ap, fmt);
	vprintf(fmt, ap);
	printf("\n");
	va_end(ap);
	_rtt();
	/*NOTREACHED*/
}

void
exit(void)
{
	panic("exit");
	/*NOTREACHED*/
}
