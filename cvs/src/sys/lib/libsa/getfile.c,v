#include "stand.h"

#define CTRL(x) (x&037)

int	getfile(const char *, int);

int
getfile(const char *prompt, int mode)
{
	int fd;
	char buf[100];

	do {
		printf("%s: ", prompt);
		getln(buf, sizeof buf);
		if (buf[0] == CTRL('d') && buf[1] == 0)
			return (-1);
	} while ((fd = open(buf, mode)) < 0);

	return (fd);
}
