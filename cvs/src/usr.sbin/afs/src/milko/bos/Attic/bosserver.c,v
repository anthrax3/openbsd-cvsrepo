a152 20
 * find server named `name' in linked list `old_srv'.
 * If `name' isn't found, return NULL.
 */

static struct mtype *
find_server (struct mtype **old_srv, const char *name)
{
    struct mtype *srv = *old_srv;

    while (srv) {
	if (srv->name && strcasecmp (name, srv->name) == 0) {
	    return srv;
	}
	srv = srv->next;
    }
    return NULL;
}


