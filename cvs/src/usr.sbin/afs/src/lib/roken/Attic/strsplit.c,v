/*
 * Split a string
 */

#ifdef HAVE_CONFIG_H
#include <config.h>
RCSID("$Id: strsplit.c,v 1.1 2000/09/11 14:41:05 art Exp $");
#endif

#include <string.h>
#include <roken.h>

/* XXX - fix this */
int
strsplit (char *str, char *pat, ...)
{
     va_list args;
     char *p;
     char **sub;
     unsigned hits = 0;

     va_start(args, pat);
     if (pat == NULL)
	  pat = " \t";

     for (p = str; *p; ++hits) {
	  p += strspn (p, pat);
	  sub = va_arg(args, char **);
	  if (*p == '\0' || sub == NULL)
	       break;
	  *sub = p;
	  p += strcspn (p, pat);
	  if (*p != '\0') {
	       *p = '\0';
	       p++;
	  }
     }
     va_end(args);
     return hits;
}

int
vstrsplit (char *str, char *pat, unsigned nsub, char **sub)
{
     unsigned hits = 0;
     char *p;

     if (pat == NULL)
	  pat = " \t";

     for (p = str; *p; ++hits) {
	  p += strspn (p, pat);
	  if (*p == '\0' || sub == NULL || nsub-- == 0)
	       break;
	  *sub++ = p;
	  p += strcspn (p, pat);
	  if (*p != '\0') {
	       *p = '\0';
	       p++;
	  }
     }
     return hits;
}
