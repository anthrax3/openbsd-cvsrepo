#ifdef HAVE_CONFIG_H
#include <config.h>
RCSID("$Id: erealloc.c,v 1.2 2000/09/11 14:40:59 art Exp $");
#endif

#include <stdlib.h>
#include <err.h>

#include <roken.h>

/*
 * Like realloc but never fails.
 */

void *
erealloc (void *ptr, size_t sz)
{
    void *tmp = realloc (ptr, sz);

    if (tmp == NULL && sz != 0)
	err (1, "realloc %lu", (unsigned long)sz);
    return tmp;
}
@


