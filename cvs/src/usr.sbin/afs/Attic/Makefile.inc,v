	   -I${AFSSRC}/lib/sl -I${AFSSRC}/lib/vers \
	   -I${AFSSRC}/nnpfs/include -I${AFSSRC}/nnpfs/bsd

#CFLAGS+=-g -Wall -Werror -Wno-uninitialized

