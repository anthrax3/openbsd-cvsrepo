@/*	$OpenBSD: ipcp.h,v 1.6 2002/02/16 21:28:07 millert Exp $	*/

/*
 * ipcp.h - IP Control Protocol definitions.
 *
 * Copyright (c) 1984-2000 Carnegie Mellon University. All rights reserved.
 *
