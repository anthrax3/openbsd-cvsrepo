#include <stddef.h>

extern int debug;
#define DPRINTF(x)	if (debug) printf x

void *xmalloc(size_t);
void *xzalloc(size_t);
void *xreallocarray(void *, size_t, size_t);
char *xstrdup(const char *);
int xasprintf(char**, const char *, ...);

#define min(a, b)	((a) < (b) ? (a) : (b))
#define max(a, b)	((a) > (b) ? (a) : (b))

#define roundup(n, m) (((n) + ((m) - 1)) & ~((m) - 1))
