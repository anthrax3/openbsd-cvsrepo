#ifndef _PARSER_H_
#define _PARSER_H_

#include <sys/types.h>
#include <net/if.h>
#include <netinet/in.h>

enum actions {
	NONE,
	FIB,
	FIB_COUPLE,
	FIB_DECOUPLE,
	LOG_VERBOSE,
	LOG_BRIEF,
	SHOW,
	SHOW_IFACE,
	SHOW_IFACE_DTAIL,
	SHOW_NBR,
	SHOW_TOPOLOGY,
	SHOW_FIB,
	SHOW_FIB_IFACE,
	SHOW_STATS,
	CLEAR_NBR,
	RELOAD
};

struct parse_result {
	int			family;
	uint16_t		as;
	union eigrpd_addr	addr;
	uint8_t			prefixlen;
	char			ifname[IF_NAMESIZE];
	int			flags;
	enum actions		action;
};

struct parse_result	*parse(int, char *[]);
int			 parse_asnum(const char *, uint16_t *);
int			 parse_addr(const char *, int *,
    union eigrpd_addr *);
int			 parse_prefix(const char *, int *,
    union eigrpd_addr *, uint8_t *);

#endif	/* _PARSER_H_ */
@


