1.8
log
@Remove all references to the amd -M option (it was disabled long ago) and
correct the texinfo validation errors, then re-enable validation
@
text
@#	$OpenBSD: Makefile,v 1.7 2006/07/12 23:00:07 espie Exp $

INFO = amdref.info
SRCS = amdref.texinfo

all: ${INFO}

${INFO}: ${SRCS}
	-makeinfo --no-split ${.CURDIR}/${SRCS}

clean cleandir:
	-rm -f ${INFO}

install: ${INFO}
	 ${INSTALL} ${INSTALL_COPY} -o ${DOCOWN} -g ${DOCGRP} -m ${DOCMODE} ${INFO} ${DESTDIR}${SHAREDIR}/info
	 install-info --info-dir=${DESTDIR}${SHAREDIR}/info amdref.info

.include <bsd.own.mk>
.include <bsd.obj.mk>
.include <bsd.subdir.mk>
@


