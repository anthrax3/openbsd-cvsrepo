#include <sys/types.h>
#include <sys/queue.h>
#include <sys/tree.h>
#include <sys/param.h>
#include <sys/socket.h>

#include <bsd_auth.h>
#include <event.h>
#include <imsg.h>
#include <stdio.h>

#include "smtpd.h"

int
authenticate_user(char *username, char *password)
{
	return auth_userokay(username, NULL, "auth-smtp", password);
}
