	x509.c genrsa.c s_server.c s_client.c speed.c \
	s_time.c apps.c s_cb.c s_socket.c version.c sess_id.c \
	ciphers.c ssleay.c

.PATH:	${SSLEAY_SRC}

.include<bsd.prog.mk>

