1.3
log
@Turn this into a proper deamon, and add a man page.
@
text
@#	$OpenBSD: Makefile,v 1.2 2012/10/27 18:34:03 kettenis Exp $

.if ${MACHINE} == "sparc64"

.PATH:	${.CURDIR}/../ldomctl

PROG=	ldomd
SRCS=	ldomd.c ds.c mdesc.c util.c var-config.c
CFLAGS+=-Wall
CFLAGS+=-I${.CURDIR}/../ldomctl
DEBUG=	-g

.else

NOPROG=	yes

.endif

MAN=	ldomd.8
MANSUBDIR=sparc64

.include <bsd.prog.mk>
@


1.2
log
@Give ldomd(8) its own copy of the domain services support code and modify it
to handle multiple channels.  Use it to provide the var-config domain service
to all the currently configured guest domains.
@
text
@d1 3
a3 1
#	$OpenBSD: Makefile,v 1.1 2012/10/26 18:26:13 kettenis Exp $
d9 12
a20 4
NOMAN=
