#include "installboot.h"

void
md_init(void)
{
	stages = 1;
	stage1 = "/usr/mdec/boot.lif";
}

void
md_loadboot(void)
{
}

void
md_installboot(int devfd, char *dev)
{
	bootstrap(devfd, dev, stage1);
}
@


