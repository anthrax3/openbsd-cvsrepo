1.4
log
@say goodbye to old example code, since pkg_info now does it...
@
text
@#! /usr/bin/perl
# ex:ts=8 sw=4:
# $OpenBSD: pkg_enquire,v 1.3 2004/11/11 23:00:33 espie Exp $
#
# Copyright (c) 2003-2004 Marc Espie <espie@@openbsd.org>
#
# Permission to use, copy, modify, and distribute this software for any
# purpose with or without fee is hereby granted, provided that the above
# copyright notice and this permission notice appear in all copies.
#
# THE SOFTWARE IS PROVIDED "AS IS" AND THE AUTHOR DISCLAIMS ALL WARRANTIES
# WITH REGARD TO THIS SOFTWARE INCLUDING ALL IMPLIED WARRANTIES OF
# MERCHANTABILITY AND FITNESS. IN NO EVENT SHALL THE AUTHOR BE LIABLE FOR
# ANY SPECIAL, DIRECT, INDIRECT, OR CONSEQUENTIAL DAMAGES OR ANY DAMAGES
# WHATSOEVER RESULTING FROM LOSS OF USE, DATA OR PROFITS, WHETHER IN AN
# ACTION OF CONTRACT, NEGLIGENCE OR OTHER TORTIOUS ACTION, ARISING OUT OF
# OR IN CONNECTION WITH THE USE OR PERFORMANCE OF THIS SOFTWARE.

use strict;
use warnings;
use OpenBSD::PackingList;
use OpenBSD::PackageInfo;
use File::Spec;

my %search;
my %found;
my $searched = 0;
for my $i (@@ARGV) {
	my $fname = File::Spec->rel2abs($i);
	$search{$fname} = 1;
	$searched++;
}

for my $pkg (installed_packages()) {
	my $plist = OpenBSD::PackingList->from_installation($pkg, 
	    \&OpenBSD::PackingList::FilesOnly);
	print "$pkg...\n";
	for my $item (@@{$plist->{items}}) {
		next unless $item->IsFile();
		my $fname = $item->fullname();
		if (defined $search{$fname}) {
			$found{$fname} = $pkg;
			$searched--;
		}
	}
	$plist->forget();
}
for my $i (@@ARGV) {
	if (defined $found{$i}) {
		print "$i: ", $found{$i}, "\n";
	} else {
		print "$i: ???\n";
	}
}
@


