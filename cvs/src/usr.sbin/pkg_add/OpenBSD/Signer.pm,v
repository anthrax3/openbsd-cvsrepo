sub handle_options
{
	my ($state, $opt_string, @@usage) = @@_;
	$state->{opt}{s} = 
	    sub { 
	    	push(@@{$state->{signature_params}}, shift);
	    };
	$state->{no_exports} = 1;
	$state->SUPER::handle_options($opt_string.'s:', @@usage);
	if (defined $state->{signature_params}) {
		$state->{signer} = OpenBSD::Signer->factory($state);
	}
}
