/*
 *    Creates a hash value for a UUID.
 */

uint32_t
uuid_hash(const afsUUID *uuid)
{
    uint32_t hash;
    const uint32_t *hp;
    unsigned int i;

    /* use the sum instead ? */

    hash = 0;
    hp = (const uint32_t *)uuid;
    for (i = 0; i < sizeof(*uuid)/4; i++, hp++)
	hash ^= *hp;
    return hash;
