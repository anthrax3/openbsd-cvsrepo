.nr gX 0
.de hK
.ds hT \\*(dT
.if !"\\*(cH"Null" \{\
.       ie !"\\*(gP"Null" .as hT \|(\|\\*(cH\\*(gP\|)
.       el .as hT \\|(\\|\\*(cH\\|)
.\}
.if "\\*(cH"Null" \{\
.	if !"\\*(gP"Null" .as hT \&\|(\|\\*(gP\|)
.\}
.wh 0 hM
.wh -1.25i fM
.\" .tm Here is gX == \\n(gX
.ie \\n(gX==1 \{\
.	rm n1
.	if \\n(.g .br
.	if !\\n(.g .bp
.\}
.el \{\
.	if \\n(.g .br
.	if !\\n(.g 'bp
.\}
.nr % 1
.nr gX 0
.em lM
..
.\"
.nr fW \w\fC0
