1.12
log
@Symlinks to binaries should belong to root:bin.
tweaks and ok guenther
@
text
@#	$OpenBSD: Makefile,v 1.11 2016/05/04 19:48:08 jca Exp $

PROG=	sysctl
MAN=	sysctl.8

CPPFLAGS+=	-D_LIBKVM

afterinstall:
	ln -sf ../../sbin/sysctl ${DESTDIR}/usr/sbin
	chown -h ${BINOWN}:${BINGRP} ${DESTDIR}/usr/sbin/sysctl

.include <bsd.prog.mk>
@


