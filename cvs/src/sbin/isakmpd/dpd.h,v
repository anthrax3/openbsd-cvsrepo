#define _DPD_H_

struct message;
struct payload;
struct sa;

int	dpd_add_vendor_payload(struct message *);
void	dpd_check_vendor_payload(struct message *, struct payload *);
void	dpd_handle_notify(struct message *, struct payload *);
void	dpd_start(struct sa *);

#endif /* _DPD_H_ */
