#include <stdlib.h>

#include "mille.h"

/*
 *	This routine rolls ndie nside-sided dice.
 *
 * @@(#)roll.c	1.1 (Berkeley) 4/1/82
 *
 */

int
roll(int ndie, int nsides)
{
	int	tot;

	tot = 0;
	while (ndie--)
		tot += arc4random_uniform(nsides) + 1;
	return tot;
}
@


