#include <curses.h>
#include <string.h>

#include "hangman.h"

/*
 * playgame:
 *	play a game
 */
void
playgame(void)
{
	int i;

	if (syms)
		sym_getword();
	else
		getword();
	Errors = 0;
	for (i = 0; i < 26 + 10; i++)
		Guessed[i] = FALSE;
	while (Errors < MAXERRS && strchr(Known, '-') != NULL) {
		prword();
		prdata();
		prman();
		getguess();
	}
	endgame();
}
