@d1 1
a1 1
/*	$OpenBSD: otto.c,v 1.11 2015/10/24 17:46:19 mmcc Exp $	*/
d137 1
a137 5
otto(y, x, face, buf, buflen)
	int	y, x;
	char	face;
	char	*buf;
	size_t	buflen;
d192 1
a192 5
stop_look(itemp, c, dist, side)
	struct	item	*itemp;
	char	c;
	int	dist;
	int	side;
d259 1
