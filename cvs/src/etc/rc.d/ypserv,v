1.4
log
@rc_reload is valid here.

ok robert@@
@
text
@#!/bin/sh
#
# $OpenBSD: ypserv,v 1.3 2011/07/08 02:15:34 robert Exp $

daemon="/usr/sbin/ypserv"

. /etc/rc.d/rc.subr

rc_pre() {
	[ X"`domainname`" != X"" -a -d /var/yp/`domainname` ]
}

rc_cmd $1
@


