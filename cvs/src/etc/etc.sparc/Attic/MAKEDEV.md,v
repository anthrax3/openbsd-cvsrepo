1.4
log
@Get permissions on magma/spif's correct
@
text
@d2 1
a2 1
	{-$OpenBSD: MAKEDEV.md,v 1.3 2002/01/12 21:14:57 jason Exp $-},
d70 4
a73 2
_DEV(mag)
_DEV(spif)
a97 37
	;;

magma*)
	case $U in
	0)	offset=0  nam=m;;
	1)	offset=16 nam=n;;
	2)	offset=32 nam=o;;
	*)	echo "bad unit for $i: $U"; exit 127;;
	esac
	offset=Mult($U,64)
	n=0
	while [ $n -lt 16 ]
	do
		name=${nam}`hex $n`
		M tty$name c 100 Add($offset,$n) 660 dialer uucp
		n=Add($n,1)
	done
	M bpp${nam}0 c 101 Add($offset,0) 600 wheel root
	M bpp${nam}1 c 101 Add($offset,1) 600 wheel root
	;;

spif*)
	case $U in
	0)	offset=0  nam=j;;
	1)	offset=16 nam=k;;
	2)	offset=32 nam=l;;
	*)	echo "bad unit for $i: $U"; exit 127;;
	esac
	offset=Mult($U,64)
	n=0
	while [ $n -lt 8 ]
	do
		name=${nam}`hex $n`
		M tty$name c 102 Add($offset,$n) 660 dialer uucp
		n=Add($n,1)
	done
	M bpp${nam}0 c 103 Add($offset,0) 600 wheel root
@


