dnl	$OpenBSD$
d69 2
a70 2
dnl example1: vers(__file__, {-$OpenBSD$-})
dnl example2: vers(__file__, {-$OpenBSD$-}, etc.MACHINE)
d81 1
a81 1
vers(__file__, {-$OpenBSD$-})dnl
d101 3
d107 4
a110 2
define({-_devitem-},{-.It Ar $1
$2.-})dnl
d126 3
a128 1
define({-__devitem-}, {-define($1_dev, {-_devitem($2,$3)-})$4-})dnl
