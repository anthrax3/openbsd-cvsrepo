	eth.append(Ether(src=SRC_MAC, dst=DST_MAC)/pkt)
d30 1
a30 1
	sendp(eth, iface=SRC_IF)
d33 2
a34 2
ans=sniff(iface=SRC_IF, timeout=3, filter=
    "ip6 and src "+DST_IN6+" and dst "+SRC_OUT6+" and icmp6")
