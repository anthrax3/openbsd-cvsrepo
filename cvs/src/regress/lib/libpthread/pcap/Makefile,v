1.9
log
@define REGRESS_ROOT_TARGETS for tests that require root privileges
rename the target so it shows up nicer in the log file and whitespace cleaning
@
text
@# $OpenBSD: Makefile,v 1.8 2002/09/02 20:01:43 avsm Exp $

PROG=	pcap

DPADD+=	${LIBPCAP}
LDADD+=	-lpcap

REGRESS_ROOT_TARGETS=	run-regress-${PROG}

run-regress-${PROG}: ${PROG}
	${SUDO} ./${PROG}

.include <bsd.regress.mk>
@


