package args_http;

use strict;
use warnings;
use base qw(Exporter);
our @@EXPORT = qw(init next);

my $topology = {
	hosts => {
		"6c8814709208" => {
			"port" => 8
		},
		"3431c4778157" => {
			"port" => 24
		}
	}
};

sub init {
	my $class = shift;
	my $sock = shift;
	my $self = { "count" => 0, "pcap" => "args-http.pcap",
	    "sock" => $sock, "version" => main::OFP_V_1_0() };

	bless($self, $class);

	main::ofp_hello($self);

	return ($self);
}

sub next {
	my $class = shift;
	my $self = shift;
	my $src;

	$self->{count}++;

	$src = $topology->{hosts}->{$self->{eh}->{src_mac}};
	if ($src) {
		$self->{port} = $src->{port};
	}

	main::ofp_packet_in($self, $self->{data});
}

1;
@
