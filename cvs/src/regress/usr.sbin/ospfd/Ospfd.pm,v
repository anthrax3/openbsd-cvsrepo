sub up {
	my $self = Proc::up(shift, @@_);
	my $timeout = shift || 10;
	my $regex = "startup";
	$self->loggrep(qr/$regex/, $timeout)
	    or croak ref($self), " no $regex in $self->{logfile} ".
		"after $timeout seconds";
	return $self;
}

