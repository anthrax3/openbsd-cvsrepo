# look for a suitable physical interface for carp
NIC="$(netstat -rn -finet | grep ^default | awk '{ print $8 }')"
STATUS="$(ifconfig | grep -A5 ^${NIC} | grep status: | awk '{ print $2 }')"

if [ "$STATUS" != "active" ]
d60 1
a60 1
	echo "No suitable physical interface found."
d63 3
