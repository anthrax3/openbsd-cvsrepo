	vnconfig svnd0 /tmp/image
	fdisk -iy svnd0 > /dev/null
	(disklabel -A -p g svnd0; \
	 disklabel -Aw -f f svnd0; \
	 disklabel svnd0) | grep '^  [a-p]: ' \
d56 1
a56 1
	vnconfig -u svnd0 > /dev/null 2>&1
d59 1
a59 1
vnconfig -u svnd0 > /dev/null 2>&1
