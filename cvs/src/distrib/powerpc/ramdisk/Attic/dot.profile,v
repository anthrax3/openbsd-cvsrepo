#       $OpenBSD: dot.profile,v 1.4 2000/08/08 01:08:07 deraadt Exp $
a38 1
alias dmesg="cat /kern/msgbuf"
a42 2
	# mount kernfs and re-mount the boot media (perhaps r/w)
	mount_kernfs /kern /kern
@


