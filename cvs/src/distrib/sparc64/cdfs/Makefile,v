	mkhybrid -o ${.OBJDIR}/${CDFS} ${.OBJDIR}/cd-dir
	vnconfig -v -c svnd0 ${.OBJDIR}/${CDFS}
	disklabel -w svnd0 fakecdrom "CD-ROM OpenBSD"
