	echo -n "Installing boot block..."
	disklabel -B ${1}

	# use extracted mdec if it exists (may be newer)
	if [ -d /mnt/usr/mdec ]; then
		cp /mnt/usr/mdec/boot /mnt/boot
	elif [ -d /usr/mdec ]; then
		cp /usr/mdec/boot /mnt/boot
	fi

	echo "done."
@

