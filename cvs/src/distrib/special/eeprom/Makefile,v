1.2
log
@remove sparc media building goop
@
text
@#	$OpenBSD: Makefile,v 1.1 2014/07/24 19:21:06 miod Exp $

.PATH: ${.CURDIR}/../../../usr.sbin/eeprom

.if ${MACHINE} == "macppc" || ${MACHINE} == "sparc64"
PROG=	eeprom

SRCS=	main.c
SRCS+=	ophandlers.c optree.c

CFLAGS+=	-DSMALL
.else
NOPROG=yes
.endif

.include <bsd.prog.mk>
@


1.1
log
@Build machinery to build eeprom(8) for the installation media on arches where
it matters.
@
text
@d1 1
a1 1
#	$OpenBSD$
d5 1
a5 1
.if ${MACHINE} == "macppc" || ${MACHINE} == "sparc" || ${MACHINE} == "sparc64"
a9 4

.  if ${MACHINE} == "sparc"
SRCS+=	eehandlers.c
.  endif
@

