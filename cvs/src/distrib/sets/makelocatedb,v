RELEASE=$1

if [ "X${RELEASE}" = "X" ]; then
	echo "Usage: `basename $0` <OSREVISION>"
	exit 1
fi

arch=`machine`
lists=`pwd`/lists

for i in base comp etc game man; do
	cat ${lists}/$i/mi ${lists}/$i/md.${arch} | \
	    sed -e "s,^\.,$i${RELEASE}:,"
done | sort | /usr/libexec/locate.mklocatedb

exit 0
@
