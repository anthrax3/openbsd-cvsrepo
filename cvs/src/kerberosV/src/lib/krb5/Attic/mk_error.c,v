a93 37
    buf_size = 1024;
    buf = malloc (buf_size);
    if (buf == NULL)
	return ENOMEM;

    do {
	ret = encode_KRB_ERROR(buf + buf_size - 1,
			       buf_size,
			       &msg,
			       &len);
	if (ret) {
	    if (ret == ASN1_OVERFLOW) {
		u_char *tmp;

		buf_size *= 2;
		tmp = realloc (buf, buf_size);
		if (tmp == NULL) {
		    ret = ENOMEM;
		    goto out;
		}
		buf = tmp;
	    } else {
		goto out;
	    }
	}
    } while (ret == ASN1_OVERFLOW);

    reply->length = len;
    reply->data = malloc(len);
    if (reply->data == NULL) {
	ret = ENOMEM;
	goto out;
    }
    memcpy (reply->data, buf + buf_size - len, len);
out:
    free (buf);
    return ret;
