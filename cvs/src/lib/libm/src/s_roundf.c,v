#include "math.h"
#include "math_private.h"

float
roundf(float x)
{
	float t;

	if (isinf(x) || isnan(x))
		return (x);

	if (x >= 0.0) {
		t = floorf(x);
		if (t - x <= -0.5)
			t += 1.0;
		return (t);
	} else {
		t = floorf(-x);
		if (t + x <= -0.5)
			t += 1.0;
		return (-t);
	}
}
@


