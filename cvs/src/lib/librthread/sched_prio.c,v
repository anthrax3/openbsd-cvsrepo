#include <pthread.h>
#include <errno.h>
#include "rthread.h"

int
sched_get_priority_max(int policy)
{
	if (policy < SCHED_FIFO || policy > SCHED_RR) {
		errno = EINVAL;
		return (-1);
	}
	return (PTHREAD_MAX_PRIORITY);
}

int
sched_get_priority_min(int policy)
{
	if (policy < SCHED_FIFO || policy > SCHED_RR) {
		errno = EINVAL;
		return (-1);
	}
	return (PTHREAD_MIN_PRIORITY);
}

@
