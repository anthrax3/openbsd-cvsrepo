/*
**	lib_move.c
**
**	The routine wmove().
**
*/

#include <curses.priv.h>

MODULE_ID("$From: lib_move.c,v 1.8 1998/02/11 12:13:53 tom Exp $")

int
wmove(WINDOW *win, int y, int x)
{
	T((T_CALLED("wmove(%p,%d,%d)"), win, y, x));

	if (win && 
	    x >= 0  &&  x <= win->_maxx  &&
	    y >= 0  &&  y <= win->_maxy)
	{
		win->_curx = (short)x;
		win->_cury = (short)y;

		win->_flags &= ~_WRAPPED;
		win->_flags |= _HASMOVED;
		returnCode(OK);
	} else
		returnCode(ERR);
}
@


