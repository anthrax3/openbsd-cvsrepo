/*
**	lib_endwin.c
**
**	The routine endwin().
**
*/

#include <curses.priv.h>
#include <term.h>

MODULE_ID("$From: lib_endwin.c,v 1.16 1998/09/20 03:29:17 tom Exp $")

int
endwin(void)
{
	T((T_CALLED("endwin()")));

	if (SP) {
		SP->_endwin = TRUE;
		SP->_mouse_wrap(SP);
		_nc_screen_wrap();
		_nc_mvcur_wrap();	/* wrap up cursor addressing */
	}

	returnCode(reset_shell_mode());
}
@


