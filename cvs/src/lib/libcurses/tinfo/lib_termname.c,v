#include <curses.priv.h>

MODULE_ID("$Id: lib_termname.c,v 1.8 2003/12/27 18:23:01 tom Exp $")

NCURSES_EXPORT(char *)
termname(void)
{
    char *name = 0;

    T((T_CALLED("termname()")));

    if (cur_term != 0)
	name = cur_term->_termname;

    returnPtr(name);
}
@


