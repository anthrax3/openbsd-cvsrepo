#include <sys/ioctl.h>
#include <termios.h>
#include <time.h>

int
tcsendbreak(int fd, int len)
{
	struct timespec sleepytime;

	sleepytime.tv_sec = 0;
	sleepytime.tv_nsec = 400000000;

	if (ioctl(fd, TIOCSBRK, 0) == -1)
		return (-1);
	HIDDEN(nanosleep)(&sleepytime, NULL);
	if (ioctl(fd, TIOCCBRK, 0) == -1)
		return (-1);
	return (0);
}
