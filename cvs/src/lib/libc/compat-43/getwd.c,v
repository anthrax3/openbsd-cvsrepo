#include <errno.h>
#include <limits.h>
#include <stdio.h>
#include <string.h>
#include <unistd.h>

char *
getwd(char *buf)
{
	char *p;

	if ((p = getcwd(buf, PATH_MAX)))
		return(p);
	strlcpy(buf, strerror(errno), PATH_MAX);
	return(NULL);
}

__warn_references(getwd,
    "warning: getwd() possibly used unsafely; consider using getcwd()");
@


