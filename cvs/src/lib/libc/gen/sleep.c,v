#include <sys/time.h>
#include <unistd.h>

unsigned int
sleep(unsigned int seconds)
{
	struct timespec rqt, rmt;

	if (seconds == 0)
		return(0);

	rqt.tv_sec = seconds;
	rqt.tv_nsec = 0;

	if (nanosleep(&rqt, &rmt) == 0)
		rmt.tv_sec = 0;

	return(rmt.tv_sec);
}
@


