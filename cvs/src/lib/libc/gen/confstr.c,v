1.8
log
@confstr() should return 0, not (size_t)-1, on errors; from Guy Harris.
ok millert@@ and jmc@@ for the man page bit.
@
text
@d1 1
a1 1
/*	$OpenBSD: confstr.c,v 1.7 2005/08/08 08:05:33 espie Exp $ */
a30 3
#include <sys/param.h>
#include <sys/sysctl.h>

a32 1
#include <stdlib.h>
d36 19
a57 4
	size_t tlen;
	int mib[2], sverrno;
	char *p;

d60 62
a121 21
		mib[0] = CTL_USER;
		mib[1] = USER_CS_PATH;
		if (sysctl(mib, 2, NULL, &tlen, NULL, 0) == -1)
			return (0);
		if (len != 0 && buf != NULL) {
			if ((p = malloc(tlen)) == NULL)
				return (0);
			if (sysctl(mib, 2, p, &tlen, NULL, 0) == -1) {
				sverrno = errno;
				free(p);
				errno = sverrno;
				return (0);
			}
			/*
			 * POSIX 1003.2 requires partial return of
			 * the string -- that should be *real* useful.
			 */
			strlcpy(buf, p, len);
			free(p);
		}
		return (tlen + 1);
@


