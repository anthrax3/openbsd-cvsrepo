#include <sys/socket.h>
#include <sys/sockio.h>
#include <sys/ioctl.h>

int
sockatmark(int s)
{
	int atmark;

	if (ioctl(s, SIOCATMARK, &atmark) == -1)
		return (-1);
	return (atmark);
}
