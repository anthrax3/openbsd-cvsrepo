PROTO_CANCEL(sendto);
PROTO_NORMAL(setrtable);
PROTO_NORMAL(setsockopt);
PROTO_NORMAL(shutdown);
PROTO_DEPRECATED(sockatmark);
PROTO_NORMAL(socket);
PROTO_NORMAL(socketpair);

#endif /* !_LIBC_SYS_SOCKET_H_ */
