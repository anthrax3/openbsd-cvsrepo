#include "SYS.h"

	.globl	_end
	.globl	__curbrk

	.data
__minbrk:
	.long	_end
	END(__minbrk)
	.type	__minbrk,@@object
	.text

	.weak	brk

ENTRY(brk)
#ifdef __PIC__
	movl	4(%esp),%ecx
	PIC_PROLOGUE
	movl	PIC_GOT(__minbrk),%edx
	PIC_EPILOGUE
	cmpl	%ecx,(%edx)
	jb	1f
	movl	(%edx),%ecx
	movl	%ecx,4(%esp)
1:
	movl	$(SYS_break),%eax
	int	$0x80
	jc	2f
	PIC_PROLOGUE
	movl	PIC_GOT(__curbrk),%edx	# set up GOT addressing
	PIC_EPILOGUE
	xorl	%eax,%eax
	movl	%ecx,(%edx)

#else

	movl	4(%esp),%ecx
	cmpl	%ecx,__minbrk
	jb	1f
	movl	__minbrk,%ecx
	movl	%ecx,4(%esp)
1:
	movl	$(SYS_break),%eax
	int	$0x80
	jc	2f
	xorl	%eax,%eax
	movl	%ecx,__curbrk
#endif
	ret
2:
	SET_ERRNO()
	ret
END(brk)
@


1.11
log
@Adds hidden _libc_FOO aliases for the system call stubs.
Stop generating _brk and _sbrk symbols: they've already been hidden.
Set the ELF symbol size on the syscall stubs.
Give the __{min,cur}brk symbols a size and type, and hide more jump labels.

