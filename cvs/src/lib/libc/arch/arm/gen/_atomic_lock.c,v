/*
 * Atomic lock for arm
 */

#include <sys/types.h>
#include <machine/spinlock.h>

int
_atomic_lock(volatile _atomic_lock_t *lock)
{
	_atomic_lock_t old = 0;
	uint32_t scratch = 0;

	__asm__("1: ldrex %0, [%1]      \n"
		"   strex %2, %3, [%1]  \n"
		"   cmp %2, #0          \n"
		"   bne 1b              \n"
		"   dmb sy              \n"
		: "+r" (old), "+r" (lock), "+r" (scratch)
		: "r" (_ATOMIC_LOCK_LOCKED));

	return (old != _ATOMIC_LOCK_UNLOCKED);
}
