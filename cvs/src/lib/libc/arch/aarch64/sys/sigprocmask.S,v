#include "SYS.h"

SYSENTRY_HIDDEN(sigprocmask)
	cbz	x1, 1f
	ldr	w1, [x1]
	b	2f
1:
	mov	w0, #0x00000001
	mov	w1, #0x00000000
2:

	SYSTRAP(sigprocmask)
	bcs	CERROR
	cbz	x2, 1f
	str	w0, [x2]
1:
	mov	x0, #0x00000000
	ret
SYSCALL_END_HIDDEN(sigprocmask)
@


