int
isnan(d)
	double d;
{
	register struct IEEEdp {
		u_int sign :  1;
		u_int  exp : 11;
		u_int manh : 20;
		u_int manl : 32;
	} *p = (struct IEEEdp *)&d;

	return(p->exp == 2047 && (p->manh || p->manl));
}
d51 1
a51 6
	register struct IEEEdp {
		u_int sign :  1;
		u_int  exp : 11;
		u_int manh : 20;
		u_int manl : 32;
	} *p = (struct IEEEdp *)&d;
d53 2
a54 1
	return(p->exp == 2047 && !p->manh && !p->manl);
@


