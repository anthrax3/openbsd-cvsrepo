#include <sys/types.h>
#include <machine/ieee.h>

int
isinf(d)
	double d;
{
	struct ieee_double *p = (struct ieee_double *)&d;

	return (p->dbl_exp == DBL_EXP_INFNAN &&
	    p->dbl_frach == 0 && p->dbl_fracl == 0);
}
