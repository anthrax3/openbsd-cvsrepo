#include "SYS.h"

SYSENTRY_HIDDEN(sigsuspend)
	ldw	0(arg0), arg0
	stw	arg0, HPPA_FRAME_ARG(0)(sp)

	SYSCALL(sigsuspend)
SYSEXIT_HIDDEN(sigsuspend)

	.end
@


1.10
log
@System call stubs don't have a frame of their own, so use EMTRY_LEAF instead
of ENTRY.  This avoids emitting bogus unwind entries, which makes gdb a lot
happier.
ok mickey@@
@
text
@d1 1
a1 1
/*	$OpenBSD: sigsuspend.S,v 1.9 2005/08/07 16:40:14 espie Exp $	*/
d31 1
a31 1
SYSENTRY(sigsuspend)
d36 1
a36 1
SYSEXIT(sigsuspend)
@


