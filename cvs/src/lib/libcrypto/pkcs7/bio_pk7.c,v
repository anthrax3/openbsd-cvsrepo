#include <openssl/asn1.h>
#include <openssl/pkcs7.h>
#include <openssl/bio.h>

#include <stdio.h>

/* Streaming encode support for PKCS#7 */
BIO *
BIO_new_PKCS7(BIO *out, PKCS7 *p7)
{
	return BIO_new_NDEF(out, (ASN1_VALUE *)p7, &PKCS7_it);
}
@


