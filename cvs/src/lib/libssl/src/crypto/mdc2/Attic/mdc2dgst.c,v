		ttin0=tin0^dd[0];
		ttin1=tin1^dd[1];
		tin0^=d[0];
		tin1^=d[1];

		p=c->h;
		l2c(tin0,p);
		l2c(ttin1,p);
		p=c->hh;
		l2c(ttin0,p);
		l2c(tin1,p);
		}
	}

int MDC2_Final(unsigned char *md, MDC2_CTX *c)
	{
	unsigned int i;
	int j;

	i=c->num;
	j=c->pad_type;
	if ((i > 0) || (j == 2))
		{
