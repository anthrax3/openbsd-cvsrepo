a5 2
unsigned char cleanse_ctr = 0;

d9 1
a9 10
	unsigned char *p = ptr;
	size_t loop = len, ctr = cleanse_ctr;
	while (loop--) {
		*(p++) = (unsigned char)ctr;
		ctr += (17 + ((size_t)p & 0xF));
	}
	p = memchr(ptr, (unsigned char)ctr, len);
	if (p)
		ctr += (63 + (size_t)p);
	cleanse_ctr = (unsigned char)ctr;
@


