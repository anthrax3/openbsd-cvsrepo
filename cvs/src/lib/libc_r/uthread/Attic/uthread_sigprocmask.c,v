#include <signal.h>
#include <errno.h>
#ifdef _THREAD_SAFE
#include <pthread.h>
#include "pthread_private.h"

int
sigprocmask(int how, const sigset_t *set, sigset_t *oset)
{
	return (pthread_sigmask(how, set, oset));
}
#endif
@


