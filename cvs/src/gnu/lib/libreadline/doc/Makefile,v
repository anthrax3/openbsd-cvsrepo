@d1 1
a1 1
#	$OpenBSD: Makefile,v 1.1 2001/03/18 17:37:36 millert Exp $
d5 1
a5 1
INFO=	readline.info history.info rluserman.info
a14 3

rluserman.info: ${RLSRC}
	-makeinfo --no-split -I ${.CURDIR} -o ${.TARGET} ${.CURDIR}/rluserman.texinfo
@


