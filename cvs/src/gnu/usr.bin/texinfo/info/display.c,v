a154 37
	  else if (*nodetext == '\0'
		   && (nodetext + 2) < last_node_char
		   && *(nodetext + 1) == '\b'
		   && *(nodetext + 2) == '[')
	    {
	      /* Found new style tag/cookie \0\b[
		 Read until the closing tag \0\b] */
	      int element_len = 0;
	      char *element;

	      /* Skip the escapes.  */
	      nodetext += 3;

	      while (!(*nodetext == '\0'
		    && *(nodetext + 1) == '\b'
		    && *(nodetext + 2) == ']'))
		{
		  nodetext++;
		  element_len++;
		}

	      element = (char *) malloc (element_len + 1);
	      strncpy (element, nodetext - element_len, element_len);

	      /* Skip the escapes.  */
	      nodetext += 2;
	      pl_ignore += element_len + 5;
	      /* Append string terminator.  */
	      element[element_len] = '\0';

	      handle_tag (element);

	      /* Over and out */
	      free (element);

	      continue;
	    }
