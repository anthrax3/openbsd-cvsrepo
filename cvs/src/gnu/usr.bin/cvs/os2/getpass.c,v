  static char Buf[80];
  STRINGINBUF StringInBuf;
  
  printf ("%s", prompt);
  fflush (stdout);
d24 1
a24 20
  EchoOff ();

  StringInBuf.cb = sizeof (Buf) - 1;
  StringInBuf.cchIn = 0;
  KbdStringIn ((PSZ) Buf, &StringInBuf, IO_WAIT, 0);
  Buf[StringInBuf.cchIn] = '\0';

  EchoOn ();

  return Buf;
}


