# Fancy compiler suites use optimising linker as well as compiler.
# <spider@@Orb.Nashua.NH.US>
case "$unamer" in
*[123].*)	# old loader
		lddlflags="$lddlflags -O3"
		;;
*)            if $test "X$optimize" = "X$undef"; then
                      lddlflags="$lddlflags -msym"
