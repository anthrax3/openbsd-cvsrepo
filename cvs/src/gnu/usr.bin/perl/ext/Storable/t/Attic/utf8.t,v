1.1.1.2
log
@Import of stock perl 5.8.5
@
text
@a0 1

d33 1
a33 1
print "1..6\n";
a45 17

# Storable needs to cope if a frozen string happens to be internall utf8
# encoded

$x = chr 256;
my $data = freeze \$x;
ok 4, $x eq ${thaw $data};

$data .= chr 256;
chop $data;
ok 5, $x eq ${thaw $data};


$data .= chr 256;
# This definately isn't valid
eval {thaw $data};
ok 6, $@@ =~ /corrupt.*characters outside/;
@

