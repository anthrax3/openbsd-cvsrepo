@#!/usr/bin/perl -w                                         # -*- perl -*-

BEGIN {
    require "t/pod2html-lib.pl";
}

END {
    rem_test_dir();
}

use strict;
use Cwd;
use Test::More tests => 1;

SKIP: {
    my $output = make_test_dir();
    skip "$output", 1 if $output;
    
    my $cwd = cwd();

    convert_n_test("crossref", "cross references", 
     "--podpath=t:testdir/test.lib",
     "--podroot=$cwd",
     "--htmlroot=$cwd",
     "--quiet",
    );
}

