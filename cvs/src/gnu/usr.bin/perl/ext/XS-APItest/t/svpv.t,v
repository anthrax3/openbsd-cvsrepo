text
@d3 1
a3 1
use Test::More tests => 19;
a25 6

sub TIESCALAR { bless \(my $thing = pop), shift }
sub FETCH { ${ +shift } }
tie $tyre, main => bless [], r::;
is SvPVbyte($tyre), "\xff",
  'SvPVbyte on tie returning ref that returns downgradable utf8 string';
@

