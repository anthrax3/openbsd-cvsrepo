@d26 1
a26 1
use Test qw(plan ok $TESTERR);
d61 3
a63 4
# is fast enough to be "0", or slow enough to be exactly "1".
if (! ok($duration =~ /\.|^[01]$/)) {
    print($TESTERR "# duration=[$duration]\n");
}
