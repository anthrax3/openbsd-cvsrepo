@a13 2
use File::Spec;

a15 4
# Having the CWD in @@INC masked a bug in finding hint files
my $curdir = File::Spec->curdir;
@@INC = grep { $_ ne $curdir && $_ ne '.' } @@INC;

d17 1
a17 1
my $hint_file = File::Spec->catfile('hints', "$^O.pl");
@


