sub can {
    my ($self, $method) = @@_;

    my $parent          = $self->SUPER::can( $method );
    return $parent if $parent;

    my $package         = ref( $self ) || $self;
    my $filename        = AutoLoader::find_filename( $package . '::' . $method );
    local $@@;
    return unless eval { require $filename };

    no strict 'refs';
    return \&{ $package . '::' . $method };
}

