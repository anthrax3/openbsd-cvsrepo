sub _modpname ($) {
    my($package) = @@_;
    my $modpname = $package;
    if ($^O eq 'MSWin32') {
	$modpname =~ s#::#\\#g; 
    } else {
	$modpname =~ s#::#/#g;
    }
    $modpname;
}
