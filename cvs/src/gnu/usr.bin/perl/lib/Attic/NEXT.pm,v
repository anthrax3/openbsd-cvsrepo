sub NEXT::ELSEWHERE::ordered_ancestors
{
	my @@inlist = shift;
	my @@outlist = ();
	while (my $next = shift @@inlist) {
		push @@outlist, $next;
		no strict 'refs';
		push @@inlist, @@{"$outlist[-1]::ISA"};
	}
	return sort { $a->isa($b) ? -1
	            : $b->isa($a) ? +1
	            :                0 } @@outlist;
}

