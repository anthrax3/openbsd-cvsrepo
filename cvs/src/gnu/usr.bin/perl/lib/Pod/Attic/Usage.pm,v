                    my $regex   = $section_spec->[$i];
                    my $negated = ($regex =~ s/^\!//);
                    $match  &= ($negated ? ($headings[$i] !~ /${regex}/)
                                         : ($headings[$i] =~ /${regex}/));
                    last unless ($match);
                } # end heading levels
                if ($match) {
d620 2
a621 2
                }
            } # end sections
d634 1
a634 1
    if ($$self{USAGE_SKIPPING} && $element !~ m/^over-/) {
a640 1
# required for Pod::Simple API
a648 1
# required for old Pod::Parser API
