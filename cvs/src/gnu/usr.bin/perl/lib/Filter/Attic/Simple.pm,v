sub FILTER (&;$) {
    my $caller = caller;
    my ($filter, $terminator) = @@_;
    no warnings 'redefine';
    *{"${caller}::import"} = gen_filter_import($caller,$filter,$terminator);
    *{"${caller}::unimport"} = gen_filter_unimport($caller);
}

