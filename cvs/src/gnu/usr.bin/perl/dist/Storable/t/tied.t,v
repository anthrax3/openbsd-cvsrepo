@d21 1
a21 1
use Test::More tests => 25;
a212 10
{
    # blessed ref to tied object should be thawed blessed
    my @@a;
    tie @@a, TIED_ARRAY;
    my $r = bless \@@a, 'FOO99';
    my $f = freeze($r);
    my $t = thaw($f);
    isnt($t, undef);
    like("$t", qr/^FOO99=ARRAY/);
}
