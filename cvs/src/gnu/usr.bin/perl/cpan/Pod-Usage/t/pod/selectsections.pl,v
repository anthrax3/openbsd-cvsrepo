@#!/usr/bin/env perl
use Pod::Usage;

my @@tests = (
  [ "NAME" , "ACTIONS", "ACTIONS/help" ],
  'DESCRIPTION|OPTIONS|ENVIRONMENT/Caveats',
);

my $idx = shift(@@ARGV) || 0;

pod2usage(
  -exitstatus => 0,
  -verbose => 99,
  -sections => $tests[$idx],
  -noperldoc => 1
);
1;

__END__

