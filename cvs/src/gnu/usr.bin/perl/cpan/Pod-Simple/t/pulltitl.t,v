BEGIN { plan tests => 116 };
a46 7
DIE: {
    # Make sure we die.
    local $@@;
    eval { $p->set_source(\'=head1 foo') };
    ok $@@;
    ok $@@ =~ /\QCannot assign new source to pull parser; create a new instance, instead/;
}
@


