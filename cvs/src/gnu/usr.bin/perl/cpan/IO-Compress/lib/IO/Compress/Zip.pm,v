sub getExtraParams
{
    my $self = shift ;
d667 4
a670 15
    use IO::Compress::Base::Common  2.024 qw(:Parse);
    use Compress::Raw::Zlib  2.024 qw(Z_DEFLATED Z_DEFAULT_COMPRESSION Z_DEFAULT_STRATEGY);

