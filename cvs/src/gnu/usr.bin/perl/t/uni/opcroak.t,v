        [ element => 'my ＦŌŌ $bàr = ＦŌŌ->new; $bàr->{クラス};' ],
        [ slice => 'my ＦŌŌ $bàr = ＦŌŌ->new; @@{$bàr}{ qw( a クラス ) };' ]
    ) {
    eval $_->[1];
    
    like $@@, qr/No such class field "クラス" in variable \$bàr of type ＦŌŌ/, "$_->[0]: no such field error is UTF-8 clean";
}
