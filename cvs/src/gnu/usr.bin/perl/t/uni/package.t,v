# perl #105922

{
   my $latin_1 = "þackage";
   my $utf8    = "þackage";
   utf8::downgrade($latin_1);
   utf8::upgrade($utf8);

   local $@@;
   eval { $latin_1->can("yadda") };
   ok(!$@@, "latin1->meth works");

   local $@@;
   eval { $utf8->can("yadda") };
   ok(!$@@, "utf8->meth works");
}
