    test_again:
    my $res;
    if ($note =~ /NOWARNINGS/) {
	$res = eval "no warnings; $tstr";
    }
    else {
	$res = eval $tstr;
    }

    chomp $@@;

    if ( $yn =~ /@@/ ) {
	ok( $@@ ne '', "$tstr dies" )
	    and print "# \$\@@ was: $@@\n";
    } else {
	my $test_name = $tstr . ($yn =~ /!/ ? " does not match" : " matches");
	if ( $@@ ne '' ) {
	    fail($test_name);
	    print "# \$\@@ was: $@@\n";
	} else {
	    ok( ($yn =~ /!/ xor $res), $test_name );
	}
    }

    if ( $yn =~ s/=// ) {
	$tstr = "$right ~~ $left";
	goto test_again;
    }
