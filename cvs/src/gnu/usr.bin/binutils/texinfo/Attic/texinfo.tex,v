% @@center line
% outputs that line, centered.
%
\def\center{\parsearg\docenter}
\def\docenter#1{{%
  \ifhmode \hfil\break \fi
  \advance\hsize by -\leftskip
  \advance\hsize by -\rightskip
  \line{\hfil \ignorespaces#1\unskip \hfil}%
  \ifhmode \break \fi
}}
