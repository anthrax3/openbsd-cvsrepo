% \dosetq is called from \setref to do the actual \write (\iflinks).
%
\def\dosetq#1#2{%
  {\let\folio=0%
   \edef\next{\write\auxfile{\internalsetq{#1}{#2}}}%
   \iflinks \next \fi
  }%
}
