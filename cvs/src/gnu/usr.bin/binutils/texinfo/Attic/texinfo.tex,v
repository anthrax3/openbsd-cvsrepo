% Now define @@deftp
% Args are printed in bold, a slight difference from @@defvar.

\def\deftpargs #1{\bf \defvarargs{#1}}

% @@deftp Class window height width ...

\def\deftp{\deftpparsebody\Edeftp\deftpx\deftpheader}

