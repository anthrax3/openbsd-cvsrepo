\def\defopheader#1#2#3{%
  \dosubind{fn}{\code{#2}}{\putwordon\ \code{#1}}% function index entry
  \begingroup
    \defname{#2}{\defoptype\ \putwordon\ #1}%
    \defunargs{#3}%
  \endgroup
