static bfd_boolean
sparc64_elf_new_section_hook (abfd, sec)
     bfd *abfd;
     asection *sec;
{
  struct sparc64_elf_section_data *sdata;
  bfd_size_type amt = sizeof (*sdata);

  sdata = (struct sparc64_elf_section_data *) bfd_zalloc (abfd, amt);
