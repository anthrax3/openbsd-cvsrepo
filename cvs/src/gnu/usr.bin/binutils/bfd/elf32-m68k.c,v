		      && (WILL_CALL_FINISH_DYNAMIC_SYMBOL
			  (elf_hash_table (info)->dynamic_sections_created,
			   info->shared, h))
		      && (! info->shared
			  || (! info->symbolic
			      && h->dynindx != -1
