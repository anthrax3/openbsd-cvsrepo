@d3 1
a3 1
   1998, 1999, 2000, 2001, 2002
d24 1
d26 1
d28 1
a29 2
#include "gdb_string.h"
#include "regcache.h"
d31 1
d33 1
a33 6

#include "command.h"

#ifdef USG
#include <sys/types.h>
#endif
d40 1
a40 42
#ifdef HAVE_PTRACE_H
#include <ptrace.h>
#else
#ifdef HAVE_SYS_PTRACE_H
#include <sys/ptrace.h>
#endif
#endif

#if !defined (PT_READ_I)
#define PT_READ_I	1	/* Read word from text space */
#endif
