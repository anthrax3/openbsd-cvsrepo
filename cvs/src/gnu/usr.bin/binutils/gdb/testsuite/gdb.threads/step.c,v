    {
      perror ("cond_init(1)");
      exit (1);
    }

  if (pthread_condattr_create (&cv_attr_b) == -1)
    {
      perror ("condattr_create(2)");
      exit (1);
    }

  if (pthread_cond_init (&cv_b, cv_attr_b) == -1)
    {
      perror ("cond_init(2)");
      exit (1);
    }

