get_exec_file (int err)
{
  /* Makes one printout look reasonable; value does not matter otherwise.  */
  return "run";
}

/* Nonzero if there is a core file.  */

have_core_file_p (void)
{
  return 0;
}

kill_command (void)
{
  inferior_ptid = null_ptid;
}

