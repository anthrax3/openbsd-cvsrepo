  int try;
  
  for (try = 0; sigs[try].sw; try++)

    {
      int val;
      board_at = sigs[try].addr;
      fa = board_at + OFF_FA;
      fb = board_at + OFF_FB;
      cpd = board_at + OFF_CPD;
      cdp = board_at + OFF_CDP;
      ready =board_at + OFF_READY;
      pon = board_at + OFF_PON;	      
