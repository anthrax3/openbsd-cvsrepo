d273 1
a294 31
/* Like bit extract but the buffer is valid and doen't need to be
 * fetched
 */
static int
bit_extract_simple (buffer, offset, count)
     bfd_byte *buffer;
     int offset;
     int count;
{
  int result;
  int mask;
  int bit;

  buffer += offset >> 3;
  offset &= 7;
  bit = 1;
  result = 0;
  while (count--)
    {
      if ((*buffer & (1 << offset)))
	result |= bit;
      if (++offset == 8)
	{
	  offset = 0;
	  buffer++;
	}
      bit <<= 1;
    }
  return result;
}

