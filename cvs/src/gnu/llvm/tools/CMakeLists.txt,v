@a36 1
add_llvm_tool_subdirectory(gold)
a38 1
add_llvm_tool_subdirectory(llvm-lto)
a50 5

# Add subprojects specified using LLVM_EXTERNAL_PROJECTS
foreach(p ${LLVM_EXTERNAL_PROJECTS})
  add_llvm_external_project(${p})
endforeach(p)
@

