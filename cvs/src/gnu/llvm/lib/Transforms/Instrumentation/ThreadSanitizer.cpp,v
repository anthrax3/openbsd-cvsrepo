static Value *createIntOrPtrToIntCast(Value *V, Type* Ty, IRBuilder<> &IRB) {
  return isa<PointerType>(V->getType()) ?
    IRB.CreatePtrToInt(V, Ty) : IRB.CreateIntCast(V, Ty, false);
}

