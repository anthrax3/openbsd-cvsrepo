tf_init(tf_name, rw)
	char *tf_name;
	int rw;
{
    int     wflag;
    uid_t   me, getuid(void);
    struct stat stat_buf;
#ifdef TKT_SHMEM
    char shmidname[MaxPathLen]; 
    FILE *sfp;
    int shmid;
#endif

    switch (rw) {
    case R_TKT_FIL:
	wflag = 0;
	break;
    case W_TKT_FIL:
	wflag = 1;
	break;
