#ifdef HAVE_CONFIG_H
#include <config.h>
RCSID("$KTH: emalloc.c,v 1.4 1999/12/02 16:58:45 joda Exp $");
#endif

#include <stdlib.h>
#include <err.h>

#include <roken.h>

/*
 * Like malloc but never fails.
 */

void *
emalloc (size_t sz)
{
    void *tmp = malloc (sz);

    if (tmp == NULL && sz != 0)
	err (1, "malloc %lu", (unsigned long)sz);
    return tmp;
}
