#ifdef HAVE_CONFIG_H
#include <config.h>
RCSID("$KTH: print_version.c,v 1.3 2001/04/21 16:05:48 joda Exp $");
#endif
#include "roken.h"

#include "print_version.h"

void
print_version(const char *progname)
{
    const char *arg[] = VERSIONLIST;
    const int num_args = sizeof(arg) / sizeof(arg[0]);
    char *msg;
    size_t len = 0;
    int i;
    
    if(progname == NULL)
	progname = __progname;
    
    if(num_args == 0)
	msg = "no version information";
    else {
	for(i = 0; i < num_args; i++) {
	    if(i > 0)
		len += 2;
	    len += strlen(arg[i]);
	}
	msg = malloc(len + 1);
	if(msg == NULL) {
	    fprintf(stderr, "%s: out of memory\n", progname);
	    return;
	}
	msg[0] = '\0';
	for(i = 0; i < num_args; i++) {
	    if(i > 0)
		strcat(msg, ", ");
	    strcat(msg, arg[i]);
	}
    }
    fprintf(stderr, "%s (%s)\n", progname, msg);
    fprintf(stderr, "Copyright (c) 1999-2001 Kungliga Tekniska Högskolan\n");
    if(num_args != 0)
	free(msg);
}
