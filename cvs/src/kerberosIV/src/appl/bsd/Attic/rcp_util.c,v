#include "bsd_locl.h"

RCSID("$KTH: rcp_util.c,v 1.9 2000/07/08 12:11:59 assar Exp $");

char *
colon(char *cp)
{
	if (*cp == ':')		/* Leading colon is part of file name. */
		return (0);

	for (; *cp; ++cp) {
		if (*cp == ':')
			return (cp);
		if (*cp == '/')
			return (0);
	}
	return (0);
}

int
okname(char *cp0)
{
	int c;
	char *cp;

	cp = cp0;
	do {
		c = *cp;
		if (c & 0200)
			goto bad;
		if (!isalpha(c) && !isdigit(c) && c != '_' && c != '-')
			goto bad;
	} while (*++cp);
	return (1);

bad:	warnx("%s: invalid user name", cp0);
	return (0);
}

int
susystem(char *s, int userid)
{
    RETSIGTYPE (*istat)(int), (*qstat)(int);
    int status;
    pid_t pid;

    pid = fork();
    switch (pid) {
    case -1:
	return (127);
	
    case 0:
	if(do_osfc2_magic(userid))
	    exit(1);
	setuid(userid);
	execl(_PATH_BSHELL, "sh", "-c", s, (char *)NULL);
	_exit(127);
    }
    istat = signal(SIGINT, SIG_IGN);
    qstat = signal(SIGQUIT, SIG_IGN);
    if (waitpid(pid, &status, 0) < 0)
	status = -1;
    signal(SIGINT, istat);
    signal(SIGQUIT, qstat);
    return (status);
}
